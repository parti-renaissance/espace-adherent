{% extends 'base.html.twig' %}

{% block page_title 'Mon profil' %}

{% block content %}

<main class="adherent_profile">
    <section class="adherent_profile__header--outer l__row l__row--h-stretch list__links--nav progressive-background text--center space--60-0"
           data-sd="{{ static_asset('procuration.jpg', {'w': 300, 'q': 20}) }}"
           data-hd="{{ static_asset('procuration.jpg', {'w': 2000, 'q': 70}) }}">
          <div class="adherent_profile__header--inner l__wrapper--slim">
              <h1 class="text--larger text--on-white text--pink">
                  En Marche recrute !
              </h1>
              <div class="text--white text--body b__nudge--top l__wrapper-500">
                  Remplissez votre CV En Marche et mettez vos compétences au service de projets citoyens.
              </div>
              <div class="b__nudge--top">
                  <a href="{{ path('app_summary_manager_index') }}" class="btn btn--hollow">
                      Créer mon CV
                  </a>
              </div>
          </div>
    </section>

    <section class="adherent_profile__membership l__wrapper--medium space--30-0">
        <h2 class="text--large b__nudge--bottom-tiny">{{ app.user.fullname }}</h2>
        <div class="text--body text--gray">{{ app.user.emailaddress }} | Membre depuis {{ app.user.activatedAt|localizeddate('none', 'none', 'fr_FR', null, 'MMM Y') }}</div>
    </section>

    <hr class="l__wrapper b__nudge--bottom-larger"/>

    <section class="l__wrapper--medium">
        <div class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
            {% include 'adherent/_profile_menu.html.twig' %}

            <div class="l__wrapper--main l__wrapper--main-right">
                {% block adherent_profile_form %}{% endblock %}
            </div>
        </div>
    </section>
</main>

{% endblock %}
