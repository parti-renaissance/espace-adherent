{% extends 'besoindeurope/base_besoindeurope.html.twig' %}

{% block header '' %}

{% block body_classes 'min-h-screen flex justify-center items-center' %}

{% block content %}
    <section class="flex flex-col bg-white px-10 pt-8 pb-[3.25rem] w-[380px] lg:w-[500px] re_new_ui bde-theme">
        <a href="//{{ besoindeurope_host }}" class="flex flex-col justify-center items-center self-center mb-6 lg:mb-[4.38rem] font-sharp font-semibold text-[2rem]/[normal] text-black neg-letter-spacing--4" title="Site Besoin d'Europe">
            <span class="text-[#00AEEF]">Le 9 juin<br/>nous avons</span>
