{% extends 'base.html.twig' %}

{% block page_title 'Réinitialisation du mot de passe' %}

{% block content %}

    <main class="reset-password">
        <section class="l__wrapper-300">
            <div>
                <h2>Réinitialisation de votre mot de passe</h2>

                <div class="security__form">
                    <p class="security__form__title">Saisissez un nouveau mot de passe.</p>

                    {{ form_start(form) }}

                        {{ form_errors(form) }}

                        <div class="form__row">
                            {{ form_errors(form.password) }}
                            {{ form_errors(form.password.first) }}
                            {{ form_widget(form.password.first, { attr: { class: 'form--full' } }) }}
                            {{ form_widget(form.password.second, { attr: { class: 'form--full' } }) }}
                        </div>

                        <div class="form__row">
                            {{ form_widget(form.submit, { label: 'Réinitialiser le mot de passe', attr: { class: 'form form--full btn btn--blue login__button' } }) }}
                        </div>

                        {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
