{% extends 'security/renaissance_layout.html.twig' %}

{% block title 'Réinitialiser mon mot de passe' %}

{% form_theme form 'renaissance/forms/tailwind_form_theme.html.twig' %}

{% block security_block_title %}
    Je réinitialise mon <span class="text-ui_blue-50">mot de passe</span>
{% endblock %}

{% block security_content %}
    {{ form_start(form, {
        attr: {
            class: 'grid grid-cols-1 gap-6 lg:gap-4',
            'x-data': '{ isSubmitting: false }',
            '@submit': 'isSubmitting = true',
        },
    }) }}
        {% if error is defined %}
            <twig:ReParagraphStatus status="error" icon>
                {{- error.messageKey|trans(error.messageData)|raw -}}
            </twig:ReParagraphStatus>
        {% endif %}

        {{ form_errors(form) }}

        {{ form_row(form.email, {
            attr: {
                placeholder: 'Adresse email',
                validate: "['required']",
                autocomplete: 'email',
            }, label: false}) }}

        <twig:ReButton
            class="w-full transition-opacity duration-200"
            disabled="x:isSubmitting"
        >
            <span x-show="!isSubmitting">
                Réinitialiser
            </span>
            <span x-show="isSubmitting" x-cloak class="flex items-center justify-center gap-2">
                <svg class="animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Envoi en cours...
            </span>
        </twig:ReButton>
    {{ form_end(form) }}

    <hr class="mt-10 hidden lg:block"/>

    <a href="{{ path('app_renaissance_login') }}" class="mt-10 self-center font-maax hover:underline text-ui_blue-50 text-[13px] lg:text-base font-normal tracking-tight">← Page précédente</a>
{% endblock %}
