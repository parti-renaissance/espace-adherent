{% extends 'renaissance/double_columns_layout.html.twig' %}

{% block title 'Connectez-vous avec vos identifiants' %}

{% form_theme form 'renaissance/form_theme.html.twig' %}

{% block content_left_side %}
    {% include 'renaissance/partials/left-side-content.html.twig' %}
{% endblock %}

{% block content_right_side %}
    <section class="flex items-center justify-center flex-grow p-5">
        <div class="w-96">
            {{ form_start(form, { action: path('app_user_login_check', { app_domain: app_renaissance_host }) }) }}
                {% if error %}
                    <div class="py-3 text-red-400">
                        {{- error.messageKey|trans(error.messageData)|raw -}}
                    </div>
                {% endif %}

                {{ form_row(form._login_email, { label: 'E-mail', attr: { autocapitalize: 'off' } }) }}
                {{ form_row(form._login_password, { label: 'Mot de passe' }) }}

                <div class="flex items-center space-x-2 checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" class="h-4 w-4 rounded border-gray-300 text-re-blue-600 focus:ring-re-blue-500" />
                    <label class="block text-sm font-medium text-gray-700 uppercase tracking-wider" for="remember_me">Se souvenir de moi</label>
                </div>

                <p class="mt-4">
                    <a href="{{ path('app_renaissance_forgot_password') }}" class="text-base font-medium leading-6 text-dark-blue hover:underline">Mot de passe oubli√© ?</a>
                </p>

                <button type="submit" class="mt-5 button button-blue button-full">Connexion</button>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
