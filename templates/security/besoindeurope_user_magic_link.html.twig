{% extends 'security/besoindeurope_layout.html.twig' %}

{% block title 'Connectez-vous avec un lien magique' %}

{% form_theme form 'renaissance/forms/tailwind_form_theme.html.twig' %}

{% block security_block_title %}
    Je me connecte avec un lien
{% endblock %}

{% block security_content %}
    {{ form_start(form, { attr: { class: 'grid grid-cols-1 gap-6 lg:gap-4' } }) }}
        {% if error is defined %}
            <twig:ReParagraphStatus status="error" icon>
                {{- error.messageKey|trans(error.messageData)|raw -}}
            </twig:ReParagraphStatus>
        {% endif %}

        {{ form_row(form, {
            attr: {
                placeholder: 'Adresse email',
                autocomplete: 'email',
            }, label: false}) }}

        <twig:ReButton
            color="black"
            class="w-full"
        >M’envoyer un lien</twig:ReButton>
    {{ form_end(form) }}

    <hr class="mt-10 hidden lg:block border-dashed"/>

    <a href="{{ path('app_besoindeurope_login') }}" class="mt-10 self-center font-maax hover:underline text-ui_blue-50 text-[13px] lg:text-base font-normal tracking-tight">Page précédente</a>
{% endblock %}
