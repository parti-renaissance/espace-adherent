{% extends 'base_renaissance.html.twig' %}

{% block body_classes 'min-h-screen flex justify-center items-center' %}

{% form_theme form 'renaissance/forms/tailwind_form_theme.html.twig' %}

{% block flash_message '' %}

{% block content %}
    <section class="flex flex-col bg-white px-10 pt-8 pb-[3.25rem] w-[380px] lg:w-[500px]">
        <a href="{{ path('renaissance_site') }}" class="flex justify-center items-center self-center rounded-full bg-[#F4F4F7] mb-6 lg:mb-[4.38rem] w-[80px] h-[80px] lg:w-[120px] lg:h-[120px] hover:animate-pulse" title="Site Renaissance">
            <img src="{{ asset('/images/renaissance/logo-circle-dark.svg') }}" alt="logo" class="w-3/4" />
        </a>

        <h1 class="mb-6 lg:mb-16 text-center font-maax text-ui_gray-80 tracking-tighter font-medium lg:text-2xl">
            {% block security_block_title '' %}
        </h1>

        {% for label, messages in app.flashes(['error', 'info', 'success']) %}
            {% if messages|length %}
                {% for message in messages %}
                    <div class="mb-6 lg:mb-16">
                        <twig:Atoms:ReParagraphStatus status="{{ label }}" icon="{{ label }}">
                            {{ message|trans|raw }}
                        </twig:Atoms:ReParagraphStatus>
                    </div>
                {% endfor %}
            {% endif %}
        {% endfor %}

        {% block security_content '' %}

        <footer class="text-center mt-24 text-ui_gray-40">
            Renaissance Â© {{ "now"|date('Y') }}
        </footer>
    </section>
{% endblock %}
