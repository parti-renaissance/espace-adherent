{% extends 'security/renaissance_layout.html.twig' %}

{% block title 'Réinitialiser mon mot de passe' %}

{% form_theme form 'renaissance/forms/tailwind_form_theme.html.twig' %}

{% block security_block_title %}
    Je réinitialise mon <span class="text-ui_blue-50">mot de passe</span>
{% endblock %}

{% block security_content %}
    {{ form_start(form, { attr: { class: 'grid grid-cols-1 gap-6 lg:gap-4' } }) }}
        {{ form_errors(form) }}

        {{ form_row(form.password.first, { label: false, attr: {
            placeholder: 'Nouveau mot de passe',
            validate:"['required']",
        } }) }}

        {{ form_row(form.password.second, { label: false, attr: {
            placeholder: 'Confirmation',
            validate:"['required']",
        } }) }}

        {{ form_row(form.submit, { label: 'Créer mon mot de passe', attr: { class: 'w-full' } }) }}
    {{ form_end(form) }}
{% endblock %}
