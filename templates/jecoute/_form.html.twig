<div class="em-form__group">
    {{ form_errors(form.name) }}
    {{ form_label(form.name, 'Nom du questionnaire', {label_attr: {class: 'em-form__label'}}) }}
    {{ form_widget(form.name, {attr: {class: 'em-form__field committee_event__form__name', placeholder: 'Entrez le nom du questionnaire (70 caractères max.)'}}) }}
</div>

{% if form.zone is defined %}
    <div class="em-form__group em-form__checkbox--inline">
        <label class="em-form__label required">Zone concernée</label>
        {{ form_widget(form.zone, {attr: {class: 'em-form__field committee_event__form__name', placeholder: 'Sélectionner une seule zone'}}) }}
        {{ form_errors(form.zone) }}
    </div>
{% endif %}

{% if not form.vars.disabled %}
    <div class="em-form__group em-form__group--cgu">
        <div class="form__checkbox">
            {{ form_errors(form.published) }}
            {{ form_widget(form.published, {attr: {class: 'committee_event__form__name'}}) }}
            {{ form_label(form.published, 'Publier le questionnaire') }}
        </div>
        {% if form.blockedChanges is defined %}
            <div class="form__checkbox">
                {{ form_errors(form.blockedChanges) }}
                {{ form_widget(form.blockedChanges, {attr: {class: 'committee_event__form__name'}}) }}
                {{ form_label(form.blockedChanges, 'Bloquer la modification du questionnaire aux autres rôles') }}
            </div>
        {% endif %}
    </div>

    <div class="information__modal inf-modl--pale-blue b__nudge--top-50 b__nudge--bottom-large">
        Vous pouvez choisir de créer librement une question et en collecter les réponses, mais son analyse ne pourra
        pas être traitée par les équipes de LaREM. En choisissant une question suggérée, ses réponses pourront être
        analysées à un niveau local comme national et être comparées aux données remontées par les autres référents.
    </div>

    <div class="sub-section">Vos questions</div>

    <div class="b__nudge--top-large b__nudge--bottom-large">
        <span id="suggested-questions-open-popin" class="btn btn--gray btn--large-and-full">Sélectionner une question suggérée</span>
    </div>

    <div class="or-separator"></div>

    <div class="b__nudge--top-large b__nudge--bottom-large">
        <span data-collection="{{ form.questions.vars.id }}" class="{{ form.questions.vars.id }}-question-add {{ form.questions.vars.id }}-question-action btn btn--gray btn--large-and-full">Créer une nouvelle question libre</span>
    </div>
{% endif %}

<div>
    {{ form_errors(form.questions) }}
    {{ form_widget(form.questions) }}
</div>

{% if not form.vars.disabled %}
    <div class="form__row text--center b__nudge--top">
        <button type="submit" class="btn btn--blue btn--large-and-full b__nudge--top">Enregistrer le questionnaire local</button>
    </div>
{% endif %}
