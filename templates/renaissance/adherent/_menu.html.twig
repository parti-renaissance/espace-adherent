{% set is_information_route = is_active_route(app.request, [
    'app_user_edit',
    'app_certification_request_*',
    'app_user_change_password',
    'app_adherent_pin_interests',
    'app_user_set_email_notifications',
    'app_adherent_commitment',
]) %}

<div>
    <h5 class="inline-flex items-center mb-4 text-sm leading-5 font-medium uppercase tracking-wider lg:mb-3 {{ is_information_route ? 'text-re-blue-500' : 'text-slate-600' }}">
        {% include 'icons/user.svg.twig' with { svg_class: (is_information_route ? 'text-re-blue-400' : 'text-gray-400') ~ ' w-5 h-5 mr-2' } %}
        Informations
    </h5>
    <ul class="ml-2 space-y-4 lg:space-y-2 border-l border-gray-200">
        <li>
            <a href="{{ path('app_user_edit', { app_domain: renaissance_host }) }}" class="block border-l pl-4 -ml-px {{ is_active_route(app.request, ['app_user_edit', 'app_user_terminate_membership']) ? 'border-re-blue-400 text-re-blue-500 font-medium' : 'border-transparent hover:border-slate-400 text-slate-700 hover:text-slate-900' }}">
                Général
            </a>
        </li>
        <li>
            <a href="{{ path('app_user_change_password', { app_domain: renaissance_host }) }}" class="block border-l pl-4 -ml-px {{ is_active_route(app.request, 'app_user_change_password') ? 'border-re-blue-400 text-re-blue-500 font-medium' : 'border-transparent hover:border-slate-400 text-slate-700 hover:text-slate-900' }}">
                Mot de passe
            </a>
        </li>
        <li>
            <a href="{{ path('app_user_set_email_notifications', { app_domain: renaissance_host }) }}" class="block border-l pl-4 -ml-px {{ is_active_route(app.request, 'app_user_set_email_notifications') ? 'border-re-blue-400 text-re-blue-500 font-medium' : 'border-transparent hover:border-slate-400 text-slate-700 hover:text-slate-900' }}">
                Communication
            </a>
        </li>
        <li>
            <a href="{{ path('app_certification_request_home', { app_domain: renaissance_host }) }}" class="block border-l pl-4 -ml-px {{ is_active_route(app.request, 'app_certification_request_*') ? 'border-re-blue-400 text-re-blue-500 font-medium' : 'border-transparent hover:border-slate-400 text-slate-700 hover:text-slate-900' }}">
                Certification
            </a>
        </li>
    </ul>
</div>

{% if 'production' is not same as app_environment %}
    <div class="pt-2">
        <a href="{{ path('app_renaissance_adherent_formation_list') }}" class="inline-flex items-center text-base leading-6 tracking-wider {{ is_active_route(app.request, 'app_renaissance_adherent_formation_list', { app_domain: renaissance_host }) ? 'text-re-blue-500 font-medium' : 'text-slate-700 hover:text-slate-900' }}">
            {% include 'icons/academic.svg.twig' with { svg_class: 'h-5 w-5 mr-2' } %}
            Formations
        </a>
    </div>
{% endif %}

{% if is_granted('RENAISSANCE_ADHERENT') %}
    {% set designations = find_active_local_designations(app.user) %}

    {% if designations|length %}
        {% set election_routes  = {
            'local_election': 'app_renaissance_departmental_election_lists',
            'local_poll': 'app_renaissance_local_election_home',
        } %}

        <div>
            <h5 class="inline-flex items-center mb-4 text-sm leading-5 font-medium uppercase tracking-wider lg:mb-3 text-red-500">
                {% include 'icons/archive.svg.twig' with { svg_class: 'text-red-500 w-5 h-5 mr-2' } %}
                Élections
            </h5>
            <ul class="ml-2 space-y-4 lg:space-y-2 border-l border-red-200">
                {% for designation in designations %}
                    <li>
                        <a href="{{ path(election_routes[designation.getType()], {uuid: designation.getUuid()}) }}" class="block border-l pl-4 -ml-px border-transparent hover:border-red-400 text-slate-700 hover:text-slate-900">
                            {{ designation.getTitle() }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endif %}
