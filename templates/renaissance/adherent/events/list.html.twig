{% extends 'renaissance/adherent/_layout.html.twig' %}

{% block page_title 'Événements' %}

{% block content_right_side %}
    <section class="isolate relative">
        <a href="{{ path('app_renaissance_event_my_events_list') }}" class="inline-flex items-center text-sm leading-5 text-re-blue-500 hover:text-re-blue-400">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
            </svg>
            Retourner à mes évènements
        </a>
        <div class="mt-4 bg-white border border-gray-300 grid gap-4 lg:grid-cols-3 rounded-lg p-5 md:p-6">
            <div>
                <label for="search" class="block text-sm font-medium leading-6 text-gray-700">Recherche</label>
                <input type="search" name="search" id="search" class="mt-1 block w-full rounded-md border py-1.5 text-gray-900 shadow-sm border-gray-300 placeholder:text-gray-400 focus:border-re-blue-500 focus:ring focus:ring-blue-600 md:text-sm md:leading-6" placeholder="Recherche">
            </div>
            <div>
                <label for="location" class="block text-sm font-medium leading-6 text-gray-700">Type d'évènements</label>
                <select id="location" name="location" class="mt-1 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-blue-600 sm:text-sm sm:leading-6">
                    <optgroup label="Atelier">
                        <option>Project Citoyen</option>
                        <option>Un an</option>
                    </optgroup>
                    <optgroup label="Conférence">
                        <option>Débat</option>
                    </optgroup>
                </select>
            </div>
            <div>
                <label for="address" class="block text-sm font-medium leading-6 text-gray-700">Autour de</label>
                <div class="relative mt-1 rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 flex items-center">
                        <label for="rayon" class="sr-only">Rayon</label>
                        <select id="rayon" name="rayon" class="h-full w-[6rem] rounded-md border-0 bg-transparent py-0 pl-3 pr-7 text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm">
                            <option>1 Km</option>
                            <option>5 Km</option>
                            <option>10 Km</option>
                            <option>25 Km</option>
                            <option>50 Km</option>
                            <option>100 Km</option>
                            <option>150 Km</option>
                        </select>
                    </div>
                    <input type="text" name="address" id="address" class="block w-full rounded-md border-0 py-1.5 pl-24 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" placeholder="Paris">
                </div>
            </div>
        </div>
        <div class="mt-8 space-y-5">
            <div>
                <h4 class="text-sm leading-5 uppercase tracking-wider font-medium text-gray-700">Mardi 6 Juin</h4>
                {# Grid des events #}
            </div>
        </div>
    </section>
{% endblock %}
