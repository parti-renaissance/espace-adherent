{% extends 'renaissance/adherent/my_committee/_layout.html.twig' %}

{% block content_right_side %}
    <section class="space-y-4 md:space-y-6">
        <h1 class="text-3xl font-bold leading-10 text-gray-900">Mon comité local</h1>

        {% if my_committee %}
            <div class="grid grid-cols-2 gap-6">
                <article class="flex flex-col overflow-hidden border rounded-lg shadow-md border-slate-100">
                    <div class="flex flex-col justify-between flex-1 p-6 bg-white">
                        <div class="flex-1">
                            <h3 class="text-sm font-medium text-dark-blue">
                                {% if my_committee.hasActiveElection() %}
                                    <a href="{{ path('app_renaissance_committee_election_candidacies_lists_view', {uuid: my_committee.getUuid()}) }}" class="text-blue-400">{{ my_committee.getName() }}</a>
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300">Élection</span>
                                {% else %}
                                    {{ my_committee.getName() }}
                                {% endif %}
                            </h3>
                            <p class="mt-3 text-base line-clamp-2">{{ my_committee.getDescription() }}</p>
                        </div>
                        <div class="mt-6 flex items-center justify-between space-x-1 text-gray-500">
                            <span class="text-sm">Créé le <time datetime="{{ my_committee.getCreatedAt()|date('Y-m-d') }}">{{ my_committee.getCreatedAt|format_datetime('none', 'none', 'd MMM yyyy') }}</time></span>
                            <a href="{{ path('app_my_committee_show_list') }}" class="text-dark-blue hover:underline hover:text-light-blue-500">Changer</a>
                        </div>
                    </div>
                </article>
            </div>
        {% else %}
            <p>
                Vous n'êtes dans aucun comité pour le moment. Vous pouvez choisir votre comité <a href="{{ path('app_my_committee_show_list') }}" class="text-sky-500">ici</a>
            </p>
        {% endif %}
    </section>
{% endblock %}
