{% extends 'base_renaissance.html.twig' %}

{% block content %}
    <main class="flex flex-col h-screen">
        {% include 'renaissance/partials/site-header.html.twig' with { theme_bg: 'border-b border-re-blue-400 bg-re-blue-500' } %}

        {% block content_section %}
            {% for candidaciesGroup in election.candidaciesGroups %}
                <h3>Liste #{{ candidaciesGroup.id }}</h3>
                <a href="{{ path('asset_url', { path: candidaciesGroup.getFaithStatementFilePath(), app_domain: renaissance_host }) }}">
                    Télécharger la profession de foi
                </a>

                <p>
                    Liste:
                    <ul>
                        {% for candidacy in candidaciesGroup.candidacies %}
                            <li>{{ candidacy.firstName}} {{ candidacy.lastName }}</li>
                        {% endfor %}
                    </ul>
                </p>

                <hr>
            {% endfor %}
        {% endblock %}
    </main>
{% endblock %}
