<div class="flex mt-4 justify-between">
    <a href="{{ path(previous_route_name) }}" class="w-full py-5 bg-dark-blue hover:bg-blue-500 text-white px-4 button-group grow hover:border-transparent rounded font-din font-bold uppercase text-center">
        {{ previous_route_label|default('Étape précédente') }}
    </a>

    <button type="submit" class="rounded w-full py-5 {% if donation_background is defined %}bg-green text-white hover:bg-white hover:text-green button-group grow border hover:border-green border-x-0.5{% else %}bg-light-blue text-white hover:bg-blue-500{% endif%} font-din font-bold uppercase text-center px-4">
        {{ next_button_label|default('Étape suivante') }}
    </button>
</div>
