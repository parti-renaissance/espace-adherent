{% extends 'base_renaissance.html.twig' %}

{% set default_background_image = '/images/renaissance/parcours-adherent.jpg' %}

{% block content %}
    <section class="w-screen h-screen flex flex-col md:flex-row">
        <div class="flex flex-col h-1/4 md:h-full w-full md:w-1/3 {{ donation_background|default('bg-cover') }}"
             {% if donation_background is not defined %} style="background-image: linear-gradient(43.31deg, #1254D8 7%, rgba(18, 84, 216, 0) 57.62%), url('{{ asset('/images/renaissance/parcours-adherent.jpg') }}')"{% endif %}>

            {% block back_btn %}
                <div class="hidden md:flex md:justify-between md:items-center">
                    <a href="{% block back_btn_target path('app_renaissance_homepage') %}" class="flex items-center {% if donation_background is not defined %}text-white{% else %}text-light-blue-500{% endif%} font-bold text-sm pl-7.5 h-14">
                        <i class="fa fa-caret-left mr-4"></i> Retour
                    </a>
                </div>
            {% endblock %}

            {% block content_left_side '' %}
        </div>

        <!-- Right side -->
        <div class="flex flex-col h-3/4 md:h-full md:w-2/3 bg-white-stale text--black">
            <div class="overflow-auto flex flex-col flex-grow">
                {% block content_right_side '' %}
            </div>
        </div>
    </section>
{% endblock %}
