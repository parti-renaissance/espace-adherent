{% extends 'renaissance/donation/_layout.html.twig' %}

{% form_theme form 'renaissance/form_theme.html.twig' %}

{% block donation_content_title %}
    Je donne <span class="stabilo stabilo-green font-bold">en ligne</span>
{% endblock %}

{% set back_btn_target = path('app_renaissance_donation') %}

{% block donation_content %}
    <section class="w-96">
        <p class="uppercase text-center text-green font-din text-xl mb-12">
            Je donne <span class="stabilo stabilo-green font-bold">en ligne</span>
        </p>
        {{ form_start(form) }}
            <div class="mb-5">
                <h2 class="text-lg">vous faites un don de : <span class="font-bold"> {{ donation.amount|format_currency('EUR')|replace({',00' : ''}) }} {{ donation.duration == constant('App\\Donation\\PayboxPaymentSubscription::UNLIMITED') ? ' / mois' }}</span></h2>
            </div>

            {{ form_errors(form) }}

            <p class="mb-5">Vous vous apprêtez à faire un don important, <strong>soutenez durablement la transformation du pays en donnant mensuellement</strong> :</p>
            <div>
                {{ form_row(form.confirmDonationType) }}
            </div>

            {% include 'renaissance/partials/previous-next-buttons.html.twig' with {
                previous_route_name: 'app_renaissance_donation',
            } %}
            {{ form_end(form) }}
    </section>
{% endblock %}
