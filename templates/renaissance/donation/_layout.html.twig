{% extends 'renaissance/double_columns_layout.html.twig' %}

{% block page_title 'Don' %}

{% block back_btn_target path('app_renaissance_donation') %}

{% set donation_background = 'bg-light-green' %}

{% block content_left_side %}
    <div class="flex md:flex-grow md:items-center md:mt-0 ml-14 text-green font-bold text-[1.75rem] leading-8 md:text-custom-xl md:mb-16 w-full">
        <p>
            {% block donation_title %}
                Humanistes <br/>
                Citoyens <br/>
                Européens <br/>
                Libre-penseurs <br/>
                Progressistes <br/>
                Ambitieux <br/>
                Écologistes <br/>
                Féministes
            {% endblock %}
        </p>
    </div>

    <div class="flex md:flex-nowrap ml-14 md:mb-10 bg-cover">
        <a href="{{ path('app_renaissance_homepage') }}">
            <img style="filter: invert(48%) sepia(95%) saturate(307%) hue-rotate(118deg) brightness(97%) contrast(89%);" height="80" width="80" src="{{ asset('/images/renaissance/logo-monogramme-re.svg') }}" alt="logo"/>
        </a>
    </div>
{% endblock %}

{% block content_right_side %}
    <div class="flex flex-col items-center justify-center pt-10">
        <h1 class="text-custom-2xl text-green">{% block donation_content_title %}Faire <span class="stabilo stabilo-green font-bold">un don</span> au parti Renaissance.{% endblock %}</h1>
    </div>

    <div class="mx-5 flex flex-grow items-center justify-center">
        {% block donation_content '' %}
    </div>

{% endblock %}
