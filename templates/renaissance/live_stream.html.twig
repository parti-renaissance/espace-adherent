{% extends 'base_renaissance.html.twig' %}

{% block page_title live_stream.title %}

{% block flash_message '' %}

{% block content %}
    <twig:ReStandaloneLayout class="bg-gradient-to-b from-slate-600 to-slate-500">
        <twig:Atoms:ReCard class="max-w-[800px]">
            <div style="padding:56.25% 0 0 0;position:relative;"><iframe src="{{ live_stream.url }}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe></div>

            <h2 class="text-2xl font-bold">{{ live_stream.title }}</h2>

            <div class="text-sm text-gray-500">{{ live_stream.description|markdown_to_html }}</div>
        </twig:Atoms:ReCard>
    </twig:ReStandaloneLayout>
{% endblock %}
