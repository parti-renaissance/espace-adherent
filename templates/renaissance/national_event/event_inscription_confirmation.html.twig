{% extends 'renaissance/national_event/_layout.html.twig' %}

{% block page_title 'Confirmation' %}

{% block content_section %}
    <main class="bg-[#F4F4F7] re_new_ui bg-primary min-h-full">
        <figure class="fixed md:top-[80px] w-full h-64 sm:h-[70vh]">
            <video disableRemotePlayback class="object-cover absolute top-0 left-0 w-full h-full" autoplay loop muted poster="https://assets.parti-renaissance.fr/national/lille.jpg">
                <source src="https://assets.parti-renaissance.fr/national/lille.mp4" type="video/mp4">
                <source src="https://assets.parti-renaissance.fr/national/lille.webm" type="video/webm">
                <source src="https://assets.parti-renaissance.fr/national/lille.ogv" type="video/ogg">
            </video>
            <div class="absolute bottom-0 w-full h-1/3 bg-gradient-to-t from-[#17211C]"></div>
        </figure>

        <div class="md:grid sm:items-center md:grid-cols-2 w-full">
            <div class="flex gap-8 flex-col mt-64 md:mt-32 pt-0 p-5 pl-0 md:col-start-2 items-center md:justify-start z-10">
                <twig:Atoms:ReCard class="max-w-[500px] re-step !gap-6 !border-black !border-[3px] !font-value ">
                    {% include 'renaissance/partials/flashes.html.twig' with {slim: true} %}

                    {{ event.textConfirmation|raw }}

                    <hr>

                    <p>Suivez-nos r√©seaux-sociaux de campagne pour ne rien rater !</p>
                    <div class="flex items-center md:justify-center gap-7">
                        <a href="https://www.facebook.com/RENAISSANCE/">
                            <img src="{{ asset('images/icons/bde/social-icons/facebook.svg') }}" alt="Facebook">
                        </a>
                        <a href="https://twitter.com/Renaissance">
                            <img src="{{ asset('images/icons/bde/social-icons/x.svg') }}" alt="x">
                        </a>
                        <a href="https://www.instagram.com/renaissance/">
                            <img src="{{ asset('images/icons/bde/social-icons/instagram.svg') }}" alt="Instagram">
                        </a>
                    </div>

                    <twig:ReButton
                        class="w-full"
                        color="black"
                        tag="a"
                        href="/"
                    >Retourner sur le site</twig:ReButton>
                </twig:Atoms:ReCard>
            </div>
        </div>
    </main>
{% endblock %}
