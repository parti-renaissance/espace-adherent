{% extends 'base_renaissance.html.twig' %}

{% block app_title 'BDE' %}

{% block stylesheets %}
    <link href="{{ asset('fonts/SharpGrotesk/stylesheet.css') }}" rel="stylesheet">
    <link href="{{ asset('fonts/Value/stylesheet.css') }}" rel="stylesheet">
{% endblock %}

{% block flash_message '' %}

{% block content %}
    <main class="flex flex-col h-screen bde-theme">
        <header class="fixed w-full top-0 z-20 border-b-[3px] border-black {{ theme_bg|default('border-b border-b-black bg-white') }}">
            <div class="max-w-8xl flex items-center mx-auto pt-0 px-6 md:px-6 md:py-6 md:h-[80px] h-[56px] ">
                <a href="#" class="mt-2">
                    <h1 class="font-sharp font-semibold text-[22px]/[19.8px] text-black neg-letter-spacing--4">Parti<br/>r'enaissance</h1>
                </a>
            </div>
        </header>

        {% block content_section %}{% endblock %}

        <footer class="flex flex-col z-20 bg-black items-center md:justify-center gap-7 pb-12 py-6 text-white text-sm">
            {# --------------- SOCIALS ---------------#}
            <div class="flex bg-black items-center md:justify-center gap-7">
                <a href="https://www.facebook.com/RENAISSANCE/">
                    <img src="{{ asset('images/icons/bde/social-icons/facebook.svg') }}" alt="Facebook">
                </a>
                <a href="https://twitter.com/Renaissance">
                    <img src="{{ asset('images/icons/bde/social-icons/x.svg') }}" alt="x">
                </a>
                <a href="https://www.instagram.com/renaissance/">
                    <img src="{{ asset('images/icons/bde/social-icons/instagram.svg') }}" alt="Instagram">
                </a>
            </div>
            <div class="h-[2px] md:hidden bg-white/25 w-3/4"></div>
            {# --------------- LINKS ---------------#}
            <div class="flex flex-col md:flex-row bg-black items-center md:justify-center gap-7">
                <a href="https://parti-renaissance.fr/cgu"> CGU </a>
                <a href="https://parti-renaissance.fr/mentions-legales"> Mentions légales </a>
                <a href="https://parti-renaissance.fr/politique-de-protection-des-donnees"> Données personnelles </a>
            </div>
            <div class="h-[2px] md:hidden bg-white/25 w-3/4"></div>
            {# --------------- PARTENERS ---------------#}
            <div class="flex flex-col flex-wrap md:flex-row bg-black items-center md:justify-center gap-x-7">
                <img src="{{ asset('images/icons/bde/parteners/LOGO_RENAISSANCE.svg') }}" alt="Facebook">
                <img src="{{ asset('images/icons/bde/parteners/LOGO_MODEM.svg') }}" alt="Facebook">
                <img src="{{ asset('images/icons/bde/parteners/LOGO_HORIZONS.svg') }}" alt="Facebook">
                <img src="{{ asset('images/icons/bde/parteners/LOGO_PARTI_RADICAL.svg') }}" alt="Facebook">
            </div>

            <span>© 2023 RENAISSANCE</span>
        </footer>
    </main>
{% endblock %}
