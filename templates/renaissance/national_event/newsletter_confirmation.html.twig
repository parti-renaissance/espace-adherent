{% extends 'renaissance/national_event/_layout.html.twig' %}

{% block page_title 'Confirmation' %}

{% block content_section %}
    <div class="md:grid sm:items-center mb-[120px] md:grid-cols-2 w-full z-10 relative">
        <div class="flex gap-8 flex-col mt-64 md:mt-[120px] pt-0 p-5 md:pl-0 md:col-start-2 items-center justify-center md:justify-start">
            <twig:Atoms:ReCard class="max-w-[500px] re-step gap-0 !border-black !border-[2px]">
                <div class="flex flex-col gap-[24px] !font-value text-black text-[16px]/[20px]">
                    {{ include('renaissance/partials/flashes.html.twig', {slim: true}) }}

                    <twig:ReParagraphStatus status="success" icon slim="1">
                        Votre inscription à la newsletter a bien été confirmée.
                    </twig:ReParagraphStatus>

                    <hr>

                    <p>Suivez nos réseaux-sociaux de campagne pour ne rien rater !</p>

                    <div class="flex items-center md:justify-center gap-7">
                        {{ include('renaissance/national_event/partials/sn_links.html.twig') }}
                    </div>

                    <twig:ReButton
                        class="w-full"
                        color="black"
                        tag="a"
                        href="/"
                    >Retourner sur le site</twig:ReButton>
                </div>
            </twig:Atoms:ReCard>
        </div>
    </div>
{% endblock %}
