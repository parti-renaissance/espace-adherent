{% use 'form_div_layout.html.twig' %}

{% block button_widget %}
    <twig:ReButton
        name="{{ full_name }}"
        value="{{ label }}"
        type="{{ type }}"
        {{ ...attr }}
    >{{ label }}</twig:ReButton>
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        <twig:Atoms:ReLabel labelHtml="{{ label_html }}" id="{{ id }}" class="{{ label_attr|default({}).class ?? 'mb-3' }}">
            {{ label|trans|raw }}
        </twig:Atoms:ReLabel>
    {% endif %}
{% endblock %}

{% block form_help -%}
    {%- set help_attr = help_attr|merge({class: (help_attr.class|default('') ~ ' text-ui_gray-50 mb-3')|trim}) -%}
    {{- parent() -}}
{% endblock %}

{% block form_row %}
    <div>
        {{ form_label(form) }}
        {{ form_help(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    {%- if errors|length > 0 -%}
        {% for error in errors %}
            <twig:Atoms:ReTextStatus status="error" data-status="error" value="{{ error.message }}" />
        {% endfor %}
    {% endif %}
{% endblock %}

{% block re_choice_tab_row %}
    <div>
        <twig:Atoms:ReLinkedToggle
            name="{{ full_name }}"
            {{ ...{
                ...(disabled ? {disabled: 'disabled'} : {}),
            } }}
            {{ ...attr }}
        >
            {% for child in form.children %}
                <twig:Atoms:ReToggleButton
                    x-bind="validateField" name="{{ full_name }}"
                    id="{{ child.vars.id }}"
                    value="{{ child.vars.value }}"
                    checked="{{ child.vars.checked }}"
                >{{ child.vars.label|trans }}</twig:Atoms:ReToggleButton>
            {% endfor %}
        </twig:Atoms:ReLinkedToggle>

        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_widget_simple %}
    {%- set type = type|default('text') -%}
    {% if type == 'hidden' %}
        {{ parent() }}
    {% else %}
        <twig:Molecules:ReTextField
            name="{{ full_name }}"
            id="{{ id }}"
            value="{{ value }}"
            status="{{ valid ? 'default' : 'error' }}"
            type="{{ type }}"
            label="{{ label|trans }}"
            {{ ...{
                ...attr,
                ...(required ? {required: 'required'} : {}),
                ...(disabled ? {disabled: 'disabled'} : {}),
            } }}
        />
    {% endif %}
{% endblock %}

{% block textarea_widget %}
    <twig:Molecules:ReTextField
        name="{{ full_name }}"
        id="{{ id }}"
        value="{{ value }}"
        status="{{ valid ? 'default' : 'error' }}"
        type="textarea"
        label="{{ label|trans }}"
        {{ ...{
            ...attr,
            ...(required ? {required: 'required'} : {}),
            ...(disabled ? {disabled: 'disabled'} : {}),
        } }}
    />
{% endblock %}

{% block choice_widget_collapsed %}
    <twig:Molecules:ReSelect
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        options="{{ choices }}"
        preferredOptions="{{ preferred_choices }}"
        status="default"
        {{ ...{
            ...(disabled ? {disabled: 'disabled'} : {}),
        } }}
        {{ ...attr }}
    />
{% endblock %}

{% block re_auto_complete_row %}
    <twig:ReGoogleAutoComplete
        name="{{ full_name }}" id="{{ id }}"
        value="{{ value }}" {{ ...attr }}
        associatedFieldsPrefix="{{ form.parent.vars.id }}"
    />
{% endblock %}

{% block checkbox_row %}
    <div>
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block checkbox_widget %}
    <twig:Molecules:ReCheckboxField
        name="{{ full_name }}"
        id="{{ id }}"
        value="{{ value }}"
        checked="{{ checked }}"
        iconToolTip="{{ help|trans }}"
        status="default"
        widgetSide="{{ attr.widget_side|default('left') }}"
        {{ ...attr }}
    >
        {{ form_label(form, label, {label_attr: {class: 'grow shrink basis-0 text-gray-700 font-normal'}}) }}
    </twig:Molecules:ReCheckboxField>
{% endblock %}

{% block choice_widget_expanded %}
    {% if not multiple %}
        <twig:ReRadioFieldset
            errors="{{ errors }}"
            name="{{ full_name }}"
            {{ ...attr }}
        >
            {% for child in form.children %}
                <twig:ReRadioField
                    x-bind="validateField"
                    name="{{ full_name }}"
                    id="{{ child.vars.id }}"
                    value="{{ child.vars.value }}"
                    checked="{{ child.vars.checked }}"
                    widgetSide="{{ child.vars.attr.widget_side|default('left') }}"
                    {{ ...child.vars.attr|filter((v, k) => k != 'label_attr_class') }}
                >
                    {{ form_label(child, child.vars.label, {label_attr: {id: child.vars.id ~ '_label'}|merge({class: child.vars.attr.label_attr_class ?? 'grow shrink basis-0 text-gray-700 font-normal'})}) }}
                </twig:ReRadioField>
            {% endfor %}
        </twig:ReRadioFieldset>
    {% else %}
        {% for child in form.children %}
            {{ form_row(child) }}
        {% endfor %}
    {% endif %}
{% endblock %}

{% block autocomplete_address_row %}
    <div class="flex flex-col {% if not valid %}has-error{% endif %}" data-form="{{ name }}">
        {{ form_label(form) }}

        {% if errors.count() %}
            <div class="mb-8">
                {{ block('form_errors') }}
            </div>
        {% endif %}

        {# ---- Autocomplete ---- -#}

        <div class="address-autocomplete-wrapper gap-8 flex flex-col" x-show="showAutoComplete">
            {{ form_row(form.autocomplete, {
                label: false,
                attr: {
                    placeholder: 'Saisissez et sélectionnez une adresse postale',
                    validate: "['required']",
                    associatedFieldsPrefix: 'membership_request_address',
                    blocked: 'blocked',
                },
            }) }}

            <div class="text-gray-700 cursor-pointer text-center autocomplete-fields-toggle" @click="showAutoComplete = false">
                Un problème ? <br/> <span class="text-ui_blue-50"> Cliquez ici</span> pour saisir manuellement votre
                adresse.
            </div>
        </div>

        {# ---- Manuel ---- -#}

        <div class="address-fields-wrapper gap-8 flex-col flex" x-show="!showAutoComplete">
            {{ form_row(form.address, {label: false, attr: {placeholder: 'Adresse', validate: "['?:isFranceCountry','required']", onCheck: "setFieldValid('address')"}}) }}
            {{ form_row(form.additionalAddress, {label: false, attr: {placeholder: 'Complément d\'adresse'}}) }}

            <div class="flex flex-col xs:flex-row gap-5">
                {{ form_row(form.postalCode, {label: false, attr: {placeholder: 'Code Postal', validate: "['?:isFranceCountry', 'required', 'max:15']", onCheck: "setFieldValid('postalCode')"}}) }}
                {{ form_row(form.cityName, {label: false, attr: {placeholder: 'Ville', validate: "['required']", onCheck: "setFieldValid('cityName')"}}) }}
            </div>

            {{ form_row(form.country, {label: false, attr: {validate: "['required']", onCheck: "setFieldValid('country')", blocked: 'blocked'}}) }}

            <div class="text-gray-700 cursor-pointer text-center autocomplete-fields-toggle" @click="showAutoComplete = true">
                <span class="text-ui_blue-50">Revenir</span> à la saisie d’adresse simplifiée
            </div>
        </div>
    </div>
{% endblock %}

{% block misd_tel_widget %}
    <div class="flex">
        <div class="w-52 h-full border-r border-ui_gray-40 re-tel">
            <div class="relative w-full h-full">
                {{ form_widget(form.country, {label: false, attr: {
                    class: 'w-full absolute !max-h-[40px] left-0 top-0 p-0 background-transparent re-textfield-select',
                    placeholder: 'Code',
                }}) }}
            </div>
        </div>

        {{ form_widget(form.number, {label: false, attr: {
            placeholder: 'Numéro de téléphone',
            autocomplete: 'phone',
            status: valid ? 'default' : 'error',
            'x-numberonly': '',
            ...attr,
            class: 'w-full re-phone' ~ (attr and attr.class ? ' ' ~ attr.class : ''),
        }}) }}
    </div>
{% endblock %}

{% block place_choice_field_form_widget %}
    <div class="flex flex-col gap-4">
        <div
            class="seat-picker overflow-hidden border rounded-lg w-full box-border"
            style="height: 280px;"
            data-target-id="{{ form.place.vars.id }}"
            data-selected-seat="{{ form.place.vars.value }}"
            data-disabled-seats="{{ form.vars.reserved_places|join(',') }}"
        ></div>

        <div class="flex flex-row items-center justify-center gap-6 w-full p-2">
            <div class="flex items-center gap-2">
                <span class="block w-3 h-3 rounded-full bg-[#475569]"></span>
                <span class="text-xs">Disponible</span>
            </div>

            <div class="flex items-center gap-2">
                <span class="block w-3 h-3 rounded-full bg-[#E2E8F0]"></span>
                <span class="text-xs">Réservée</span>
            </div>

            <div class="flex items-center gap-2">
                <span class="block w-3 h-3 rounded-full bg-[#22C55E]"></span>
                <span class="text-xs">Sélectionnée</span>
            </div>
        </div>

        <div x-data="{ selectedRow: '' }">
            <div class="flex gap-4">
                {% set rowOptionsVar = 'window.options_' ~ form.row.vars.id %}

                {{ form_row(form.row, {
                    attr: {
                        'x-init': "
                            $watch('selected', val => {
                                if (val && val.value !== selectedRow) {
                                    selectedRow = val.value;
                                } else if (!val) {
                                    selectedRow = '';
                                }
                            });
                            $watch('selectedRow', (val) => {
                                if (selected && selected.value === val) return;
                                if (val) {
                                    let match = " ~ rowOptionsVar ~ ".find(opt => opt.value === val);
                                    if (match) {
                                        selected = match;
                                        query = match.label;
                                        $dispatch('input', match.value);
                                    }
                                } else {
                                    selected = null;
                                }
                            });
                        ",
                    },
                }) }}

                {% set placeOptionsVar = 'window.options_' ~ form.place.vars.id %}

                {{ form_row(form.place, {
                    attr: {
                        '@seat-selected': '
                            const seatValue = $event.detail.value;
                            const foundOption = ' ~ placeOptionsVar ~ '.find(o => o.value === seatValue);
                            if (foundOption && !foundOption?.attr?.disabled) {
                                setEndValues(foundOption);
                            }
                        ',
                        'x-init': '
                            const allPlaceOptions = ' ~ placeOptionsVar ~ ";
                            const myId = '" ~ form.place.vars.id ~ "';
                            const filterPlaces = (val) => {
                                initialOptions = allPlaceOptions.filter(opt => opt.value.startsWith(val || ''));
                                filteredOptions = initialOptions;
                            };

                            filterPlaces(selectedRow);

                            $watch('selectedRow', (rowVal) => {
                                filterPlaces(rowVal);
                                if (selected && !selected.value.startsWith(rowVal)) {
                                    selected = null;
                                    if (typeof query !== 'undefined') query = '';
                                    $dispatch('input', '');
                                }
                            });

                            $watch('selected', (placeVal) => {
                                const safeValue = placeVal?.value ?? '';
                                if (safeValue) {
                                    let extractedRow = safeValue.replace(/[^A-Z]/g, '');
                                    if (selectedRow !== extractedRow) {
                                        selectedRow = extractedRow;
                                    }

                                    const reactContainer = document.querySelector('.seat-picker[data-target-id=\"' + myId + '\"] .seat-picker-container');

                                    if (reactContainer) {
                                        reactContainer.dispatchEvent(new CustomEvent('update-seat-selection', {
                                            detail: { value: safeValue }
                                        }));
                                    }
                                    $dispatch('input', safeValue);
                                }
                            });
                        ",
                    },
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
