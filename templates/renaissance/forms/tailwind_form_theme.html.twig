{% use "form_div_layout.html.twig" %}

{% block button_widget %}
    <twig:Molecules:ReButton
        name="{{ full_name }}"
        value="{{ label }}"
        type="{{ type }}"
        {{ ...attr }}
    />
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        <twig:Atoms:ReLabel labelHtml="{{ label_html }}" id="{{ id }}" class="{{ label_attr|default({}).class ?? '' }}">
            {{ label|trans|raw }}
        </twig:Atoms:ReLabel>
    {% endif %}
{% endblock %}

{% block form_row %}
    <div>
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    {%- if errors|length > 0 -%}
        {% for error in errors %}
            <twig:Atoms:ReTextStatus status="error" value="{{ error.message }}" />
        {% endfor %}
    {% endif %}
{% endblock %}

{% block re_choice_tab_row %}
    <twig:Atoms:ReLinkedToggle name="{{ full_name }}" {{ ...attr }}>
        {% for child in form.children %}
            <twig:Atoms:ReToggleButton
                x-bind="validateField" name="{{ full_name }}"
                id="{{ child.vars.id }}"
                value="{{ child.vars.value }}"
                checked="{{ child.vars.checked }}"
            >{{ child.vars.label|trans }}</twig:Atoms:ReToggleButton>
        {% endfor %}
    </twig:Atoms:ReLinkedToggle>
{% endblock %}

{% block form_widget_simple %}
    {%- set type = type|default('text') -%}
    {% if type == 'hidden' %}
        {{ parent() }}
    {% else %}
        <twig:Molecules:ReTextField
            name="{{ full_name }}"
            id="{{ id }}"
            value="{{ value }}"
            status="{{ valid ? 'default' : 'error' }}"
            type="{{ type }}"
            label="{{ label|trans }}"
            {{ ...{
                ...attr,
                ...(required ? {required: 'required'} : {}),
            } }}
        />
    {% endif %}
{% endblock %}

{% block choice_widget_collapsed %}
    <twig:Molecules:ReSelect
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        options="{{ choices }}"
        preferredOptions="{{ preferred_choices }}"
        status="default"
        {{ ...attr }}
    />
{% endblock %}

{% block re_auto_complete_row %}
    <twig:Molecules:ReSelect
        name="{{ full_name }}" id="{{ id }}"
        value="{{ value }}" {{ ...attr }}
        status="default">
        {{ label|trans }}
    </twig:Molecules:ReSelect>
{% endblock %}


{% block checkbox_row %}
    <div>
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block checkbox_widget %}
    <twig:Molecules:ReCheckboxField
        name="{{ full_name }}"
        id="{{ id }}"
        value="{{ value }}"
        checked="{{ checked }}"
        iconToolTip="{{ help|trans }}"
        status="default"
        {{ ...attr }}
    >
        {{ form_label(form, label, {label_attr: {class: 'grow shrink basis-0 text-gray-700 text-base font-normal'}}) }}
    </twig:Molecules:ReCheckboxField>
{% endblock %}

{% block choice_widget_expanded %}
    {% if not multiple %}
        <twig:ReRadioFieldset
                errors="{{ errors }}"
                name="{{ full_name }}"
                {{ ...attr }}
        >
            {% for child in form.children %}
                <twig:ReRadioField
                        x-bind="validateField"
                        name="{{ full_name }}"
                        id="{{ child.vars.id }}"
                        value="{{ child.vars.value }}"
                        checked="{{ child.vars.checked }}"
                        {{ ...child.vars.attr }}
                >
                    {{ form_label(child, child.vars.label, {label_attr: {class: 'grow shrink basis-0 text-gray-700 text-base font-normal', id: child.vars.id~'_label'}}) }}
                </twig:ReRadioField>
            {% endfor %}
        </twig:ReRadioFieldset>
    {% else %}
        {% for child in form.children %}
            {{ form_row(child) }}
        {% endfor %}
    {% endif %}
{% endblock %}

{% block autocomplete_address_row %}
    <div class="flex flex-col {% if not valid %}has-error{% endif %}"
         data-form="{{ name }}"
    >
        {{ form_label(form) }}

        {{ block('form_errors') }}

        {# ---- Autocomplete ---- -#}

        <div class="address-autocomplete-wrapper gap-8 flex flex-col" x-show="showAutoComplete">
            {{ form_row(form.autocomplete, { label: false, attr: { placeholder: 'Saisissez et sélectionnez une adresse', onQuery:"queryGooglePlaces",  validate:"['required']", blocked:"blocked" } }) }}

            <div class="text-gray-700 text-base cursor-pointer text-center aucomplete-fields-toggle" x-on:click="showAutoComplete = false">
                Un problème ? <br/> <span class="text-ui_blue-50"> Cliquez ici</span> pour saisir manuellement votre
                adresse.
            </div>
        </div>

        {# ---- Manuel ---- -#}

        <div class="address-fields-wrapper gap-8 flex-col flex" x-show="!showAutoComplete">
            {{ form_row(form.address, { label: false, attr:{ placeholder: 'Adresse', validate:"['?:isFranceCountry','required']",  onCheck:"setFieldValid('address')" } }) }}
            {{ form_row(form.additionalAddress, { label: false, attr: { placeholder: 'Complément d\'adresse' } }) }}

            <div class="flex flex-col xs:flex-row gap-5">
                {{ form_row(form.postalCode, { label: false, attr: { placeholder: 'Code Postal', validate:"['?:isFranceCountry', 'required', 'max:15']", onCheck:"setFieldValid('postalCode')"} }) }}
                {{ form_row(form.cityName, { label: false, attr: { placeholder: 'Ville', validate:"['required']",  onCheck:"setFieldValid('cityName')" } })}}
            </div>

            {{ form_row(form.country, { label: false, attr: { validate:"['required']", onCheck:"setFieldValid('country')", blocked:"blocked" } }) }}

            <div class="text-gray-700 text-base cursor-pointer text-center aucomplete-fields-toggle" x-on:click="showAutoComplete = true">
                <span class="text-ui_blue-50">Revenir</span> à la saisie d’adresse simplifiée
            </div>
        </div>
    </div>
{% endblock %}

{% block misd_tel_widget %}
    <div class="flex">
        <div class="w-25 h-full border-r border-ui_gray-40">
            <div class="relative w-full h-full">
                {{ form_widget(form.country, {label: false, attr: {
                    class: "w-full absolute !max-h-[40px] left-0 top-0  p-0 z-[9] background-transparent re-textfield-select",
                    placeholder: 'Code'
                }}) }}
            </div>
        </div>

        {{ form_widget(form.number, {label: false, attr: {
            class: "w-full",
            placeholder: 'Numéro de téléphone',
            autocomplete: "phone",
            status: valid ? 'default' : 'error',
            'x-numberonly': '',
            ...attr
        }}) }}
    </div>
{% endblock %}
