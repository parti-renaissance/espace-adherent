{% extends 'renaissance/double_columns_layout.html.twig' %}

{% block page_title 'Adhésion' %}

{% set default_active_step = 'Informations' %}

{% block content_left_side %}
    <div class="flex md:flex-grow md:items-center md:mt-0 ml-14 text-white font-bold text-[1.75rem] leading-8 md:text-custom-xl w-full">
        <p>
            {% block adhesion_title %}
                Humanistes <br/>
                Citoyens <br/>
                Européens <br/>
                Libre-penseurs <br/>
                Progressistes <br/>
                Ambitieux <br/>
                Écologistes <br/>
                Féministes
            {% endblock %}
        </p>
    </div>

    <div class="flex md:flex-nowrap ml-14 md:mb-10 bg-cover">
        <a href="{{ path('app_renaissance_homepage') }}"><img height="80" width="80" src="{{ asset('/images/renaissance/logo-monogramme-re.svg') }}" alt="logo"/></a>
    </div>

    {% block navigation_steps %}
        <div class="hidden md:flex flex-wrap w-full border-t-2 border-white/20 py-7.5 pl-14 items-center">
            {% for step in ['Informations', 'Contributions'] %}
                <p class="{{ step == active_step|default(default_active_step) ? 'text-yellow' : 'text-white' }} font-bold text-sm mr-4">{{ step }}</p>

                {% if not loop.last %}
                    <i class="fa fa-caret-right text-white opacity-30 mr-4"></i>
                {% endif %}
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}

{% block content_right_side %}
    <p class="md:hidden text-center text-white font-bold text-3.25 leading-5 bg-dark-gray/10 py-4">
        {{ active_step|default(default_active_step) }}
    </p>

    <div class="mx-5 my-10 flex flex-grow items-center justify-center">
        {% block adhesion_content '' %}
    </div>
{% endblock %}
