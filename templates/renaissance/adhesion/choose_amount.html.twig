{% extends 'renaissance/double_columns_layout.html.twig' %}

{% block title 'Adhérer à Renaissance' %}

{% block content_right_side %}
    <section class="text-white">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div>
                <div class="text-black">
                    {{ form_widget(form.predefinedAmount) }}
                    {{ form_errors(form.predefinedAmount) }}
                </div>
                <div class="text-black">
                    {{ form_widget(form.otherAmount, { attr: { placeholder: 'Autre montant' } }) }}
                    {{ form_errors(form.otherAmount) }}
                </div>
                <div class="mt-4 text-black">
                    <a href="{{ path('app_renaissance_adhesion') }}" class="bg-blue-700 hover:bg-blue-500 text-white font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                        ⟵ Étape précédente
                    </a>
                    {{ form_widget(form.membership_amount, { attr: { class: 'bg-white hover:bg-slate-400 text-blue-700 font-semibold hover:text-blue-700 py-2 px-4 border border-blue-500 hover:border-transparent rounded' } }) }}
                </div>
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
