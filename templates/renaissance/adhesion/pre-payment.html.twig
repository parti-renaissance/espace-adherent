{% extends 'renaissance/adhesion/_layout.html.twig' %}

{% form_theme form 'renaissance/form_theme.html.twig' %}

{% set active_step = 'Contributions' %}

{% block final_javascripts %}
    <script type="text/javascript">
        Bootstrap.onLoad(function () {
            Main.runAdhesionAmountPage();
        });
    </script>
{% endblock %}

{% block adhesion_title %}
    Bienvenue <span class="stabilo stabilo-blue">{{ app.user.firstName }}.</span><br/>
    Choisissez le montant<br/>
    de votre contribution.
{% endblock %}

{% block adhesion_content %}
    <div class="w-96 mx-auto">
        {{ form_start(form) }}
            {{ form_widget(form.amount, { label: false, attr: { placeholder: 'Autre montant' } }) }}

            <div id="amount-tax-return" class="mt-5"></div>

            <p class="mt-4 text-sm">
                * Tarif réservé aux étudiants, personnes bénéficiant des minimas sociaux, sans emploi.
            </p>

            <button type="submit" class="mt-5 rounded w-full py-5 bg-white text-dark-blue font-din font-bold uppercase text-center px-4">
                Étape suivante
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
