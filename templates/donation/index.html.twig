{% extends 'donation/layout.html.twig' %}

{% block javascripts %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runDonation();

            findAll(document, '.js-flip').forEach(function (element) {
                on(element, 'click', function (event) {
                    event.preventDefault();
                    toggleClass(dom('.donation-box__flip'), 'flipped');

                    findAll(document, '.donation-box__front, .donation-box__back').forEach(function (element) {
                        toggleClass(element, 'disable');
                    });
                });
            });
        });
    </script>
{% endblock %}

{% set boxHead = '<h1 class="text--larger">Je fais un <span>don</span></h1>
<h2>Vous êtes une majorité à donner 60€</h2>' %}

{% block donation_content %}
    <div class="donation__landing">

        <!-- Need to dynamise this -->
        <section class="donation__header">
            <div class="l__wrapper">
                <div class="donation__header__content">
                    <div class="donation__header__steps">
                        <ul>
                            <li class="active">1. Montant</li>
                            <li class="chevron"><img src="{{ asset('images/icons/donation-journey-chevron.svg') }}" /></li>
                            <li class="next">2. Informations</li>
                            <li class="chevron"><img src="{{ asset('images/icons/donation-journey-chevron.svg') }}" /></li>
                            <li class="next">3. Paiement</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <section class="donation-hero">
            <div class="donation-hero__overlay"></div>
            <div class="donation-hero__container l__wrapper">
                <div class="donation-hero__content">
                    <h1 class="text--larger">Vous étiez déjà 100 000 donateurs en 2017,<br>Pour 2022, on compte sur vous !</h1>
                    <p class="text--medium-small">Chaque don, quel que soit le montant, sera consacré à une campagne ambitieuse en 2022.</p>

                    <div class="donation-reassurance dark">
