{% extends 'adherent_profile/_layout.html.twig' %}

{% block page_title 'Documents' %}
{% block canonical_url url('app_documents_index') %}

{% block adherent_profile_content %}
    <section class="adherent-profile__section">
        <h1 class="text--medium-large">Documents</h1>

        <div class="documents__category">
            <a href="{{ path('app_documents_index') }}" class="font-roboto text--blue--dark link--no-decor back-to-list">
                ⟵ Retour à la racine
            </a>
        </div>

        <div class="documents__category">
            {% if type == 'adherents' %}
                <h2 class="section-subtitle">Adhérents</h2>
            {% elseif type == 'animateurs' %}
                <h2 class="section-subtitle">Animateurs</h2>
            {% elseif type == 'animateurs-etrangers' %}
                <h2 class="section-subtitle">Animateurs à l'étranger</h2>
            {% elseif type == 'referents' %}
                <h2 class="section-subtitle">Référents</h2>
            {% endif %}

            {{ include('documents/tree.html.twig', {treeType: type, documents: documents}) }}
        </div>
    </section>
{% endblock %}
