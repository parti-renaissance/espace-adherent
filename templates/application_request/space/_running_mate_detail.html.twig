<div class="l__wrapper--narrow">
    <h3 class="text--medium b__nudge--bottom-50">Détails du candidat</h3>

    <div class="data-listing">
        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Nom</div>
            <div class="data-listing__item data-listing__item--value">{{ request.lastName }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Prénom</div>
            <div class="data-listing__item data-listing__item--value">{{ request.firstName }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Téléphone</div>
            <div class="data-listing__item data-listing__item--value">{{ request.phone ? request.phone|phone_number_format : '' }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Quelle est votre profession ?</div>
            <div class="data-listing__item data-listing__item--value">{{ request.profession }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Vos thématique(s) de prédilection</div>
            <div class="data-listing__item data-listing__item--value">
                <ul>
                    {% for favoriteTheme in request.favoriteThemes %}
                        <li>{{ favoriteTheme.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Détails thématiques “Autres”</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.customFavoriteTheme }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Pourquoi avez-vous choisi cette thématique ?</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.favoriteThemeDetails }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Êtes-vous engagé(e) dans une/des association(s) locale(s) ?</div>
            <div class="data-listing__item data-listing__item--value">{{ request.isLocalAssociationMember ? 'Oui' : 'Non' }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Détails</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.localAssociationDomain }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Avez-vous déjà eu un engagement militant ?</div>
            <div class="data-listing__item data-listing__item--value">{{ request.isPoliticalActivist ? 'Oui' : 'Non' }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Détails</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.politicalActivistDetails }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Avez-vous déjà exercé un mandat ?</div>
            <div class="data-listing__item data-listing__item--value">{{ request.isPreviousElectedOfficial ? 'Oui' : 'Non' }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Détails</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.previousElectedOfficialDetails }}</div>
        </div>

        <div class="data-listing__row">
            <div class="data-listing__item data-listing__item--label">Quel projet pour votre commune souhaiteriez-vous contribuer à porter ?</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.projectDetails }}</div>
        </div>

        <div class="data-listing__row b__nudge--bottom">
            <div class="data-listing__item data-listing__item--label">Quel sont les atouts de votre parcours professionnel ?</div>
            <div class="data-listing__item data-listing__item--value text--justify">{{ request.professionalAssets }}</div>
        </div>
    </div>
</div>
