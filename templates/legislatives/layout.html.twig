{% extends 'base.html.twig' %}

{% block app_title 'La République En Marche !' %}
{% block meta_description 'Une majorité pour rassembler, agir et réussir !' %}
{% block meta_rss '' %}
{% block open_graph_image (url('homepage')|trim('/') ~ static_asset('pages-sharers/legislatives-trombi.jpg', {'q': 80, 'w': 1200, 'h': 630, 'fit': 'crop'}))|raw %}
{% block open_graph_image_width 1200 %}
{% block open_graph_image_height 630 %}

{% block banner '' %}
{% block header '' %}
{% block footer '' %}

{% block content %}
    <div class="background--darker">
        <div class="l__wrapper space--10-0">
            <a href="{{ path('legislatives_redirect_en_marche') }}" class="back-to-list icon--with-text text--summary link--white">
                {{ include('components/caret--left.html.twig') }}
                Retour au site &nbsp;<strong><em>En Marche !</em></strong>
            </a>
        </div>
    </div>

    <header class="legislatives__header l__wrapper space--20-0 l__row l__row--h-stretch">
        <a href="{{ path('legislatives_homepage') }}" class="link--no-decor">
            <img src="{{ asset('images/logo-LREM.svg') }}"
                 width="200"
                 title="La République En Marche"
                 alt="La République En Marche" />
        </a>
        <nav>
            <ul class="list__links list__links--row list__links--no-decor list__links--nav">
                {% set currentRoute = app.request.attributes.get('_route') %}
                {% for route, title in {
                    'legislatives_homepage': 'Tous les candidats',
                    'legislatives_map': 'La carte',
                    'legislatives_events': 'Les événements'
                } %}
                    <li class="{{ route == currentRoute ? 'active' }}">
                        <a href="{{ path(route) }}">
                            {{ title }}
                        </a>
                    </li>
                {% endfor %}
                <li>
                    <a href="http://procuration-macron.fr">
                        Donner procuration
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    {% block content__outer %}
        <main class="legislatives">
            {% block content__inner %}{% endblock %}
        </main>
    {% endblock %}
{% endblock %}
