{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title 'Page supprimée' %}
{% block stylesheets %}
    <style type="text/css">
        header,
        footer {
            display: none !important;
        }
    </style>
{% endblock %}

{% block content %}
    <main class="error">
        <div class="header l__wrapper">
            <h1>
                <a href="{{ path('homepage') }}">
                    En Marche !
                </a>
            </h1>
        </div>
        <section class="l__wrapper--slim">
            <div class="error__box error__box--404"></div>
            <div>
                <h1>
                    Cette page n'existe plus !
                </h1>
                <p class="text--body text--gray">
                    Vous trouverez peut-être ce que vous cherchiez sur notre page d'accueil.
                </p>
                <a href="{{ path('homepage') }}" class="btn">Retour à l'accueil</a>
                <a href="{{ path('donation_index') }}" class="btn btn--primary">Je donne</a>
            </div>
        </section>
    </main>
