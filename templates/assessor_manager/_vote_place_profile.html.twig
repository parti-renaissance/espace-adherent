<h4 class="b__nudge--bottom">
    Bureau de vote
</h4>

<div class="profile-label">
    Nom
</div>
<div class="profile-value">
    <span id="vote-place-name">{{ votePlace.name }}</span>
</div>

<div class="profile-label">
    Adresse
</div>
<div class="profile-value">
    <span id="vote-place-address">{{ votePlace.address }}</span><br />
    <span id="vote-place-postalCode">{{ votePlace.postalCode }}</span> <span id="vote-place-city">{{ votePlace.cityName }}</span>
</div>

<div class="profile-label">
    Disponibilit√©s
</div>
<div class="profile-value">
    <ul id="vote-place-available-offices">
        {% if availabilities[votePlace.getId()].holder_count < 1 %}
            <li>{{ 'assessor_request.office.holder.label'|trans }}</li>
        {% endif %}
        {% if availabilities[votePlace.getId()].substitute_count < 1 %}
            <li>{{ 'assessor_request.office.substitute.label'|trans }}</li>
        {% endif %}
    </ul>
</div>
