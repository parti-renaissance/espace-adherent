<label
    for="{{ id is defined ? id }}"
    class="block {{ class != '' ? class : 'text-ui_gray-80 text-base font-medium mb-6' }}"
>
    {% block content %}
        {%- if labelHtml is same as(true) -%}
            {{- block(outerBlocks.content)|raw -}}
        {%- else -%}
            {{- block(outerBlocks.content) -}}
        {%- endif -%}
    {% endblock %}
</label>
