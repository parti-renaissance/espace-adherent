<{{ tag }} {{ attributes.defaults({class: 're-button re-button--'~color}) }}>
    {% if icon is defined %}
        <twig:Atoms:ReIcon type="{{ icon }}"/>
    {% endif %}

    {{ value }}

    {% if xSyncLoading is defined %}
        <twig:Atoms:ReIcon type="loading" x-show="{{ xSyncLoading }}"/>
    {% endif %}
</{{ tag }}>
