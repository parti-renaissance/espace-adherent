<{{ tag }} {{ attributes.without('x-text').defaults({class: this.defaultClass }) }}>
    {% if icon is defined %}
        <twig:Atoms:ReIcon type="{{ icon }}"/>
    {% endif %}

        <span {{ attributes.only('x-text') }}>
            {{ value }}
        </span>

    {% if xSyncLoading is defined %}
        <twig:Atoms:ReIcon type="{{ this.loaderType }}" x-show="{{ xSyncLoading }}"/>
    {% endif %}
</{{ tag }}>
