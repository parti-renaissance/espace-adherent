{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div style="width: 160px; margin-top: 5px;">
        <a href="{{ path('admin_app_citizeninitiative_edit', {id: object.id}) }}" class="btn btn-xs btn-default" title="Éditer">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Éditer
        </a>

        <a href="{{ path('admin_app_citizeninitiative_show', {id: object.id}) }}" class="btn btn-xs btn-default" title="Afficher">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
            Afficher
        </a>
    </div>

    {% if object.isPublished %}
        <div style="width: 160px; margin-top: 5px;">
            <a href="{{ path('app_citizen_initiative_show', {'slug': object.slug}) }}"
               class="btn btn-xs btn-default" title="Voir sur le site" target="_blank">
                <i class="fa fa-eye" aria-hidden="true"></i>
                Voir sur le site
            </a>
        </div>
    {% endif %}
{% endblock %}
