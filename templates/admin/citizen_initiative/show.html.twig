{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block actions %}
    {% if object.isPublished %}
        <li>
            <a href="{{ path('app_citizen_initiative_show', {'slug': object.slug}) }}"
               class="sonata-action-element" title="Voir sur le site">
                <i class="fa fa-eye" aria-hidden="true"></i>
                Voir sur le site
            </a>
        </li>
    {% endif %}
    <li>
        <a href="{{ path('admin_app_citizeninitiative_edit', {id: object.id}) }}" class="sonata-action-element" title="Editer">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Editer
        </a>
    </li>
    <li>
        <a href="{{ path('admin_app_citizeninitiative_list') }}" class="sonata-action-element" title="Éditer">
            <i class="fa fa-list" aria-hidden="true"></i>
            Retourner à la liste
        </a>
    </li>
{% endblock %}

