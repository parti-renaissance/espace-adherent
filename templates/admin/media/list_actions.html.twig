{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div style="width: 160px;">
        <a href="{{ media_asset(object) }}" class="btn btn-xs btn-default" title="Prévisualiser" target="_blank" rel="noopener noreferrer">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
            Prévisualiser
        </a>
    </div>

    <div style="width: 160px; margin-top: 5px;">
        <a href="{{ path('admin_app_media_edit', {'id': object.id}) }}" class="btn btn-xs btn-default" title="Éditer">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Éditer
        </a>

        <a href="{{ path('admin_app_media_delete', {id: object.id}) }}" class="btn btn-xs btn-default" title="Supprimer">
            <i class="fa fa-times" aria-hidden="true"></i>
            Supprimer
        </a>
    </div>
{% endblock %}
