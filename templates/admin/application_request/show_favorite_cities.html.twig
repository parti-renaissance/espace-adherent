{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% for code in object.favoriteCities %}
        {% set city = get_city_data_from_insee_code(code) %}
        {% if city is not null %}
            {{ city.name }} ({{ city.postalCode|join(', ') }}){{ not(loop.last) ? ', ' : '' }}
        {% endif %}
    {% endfor %}
{% endblock %}
