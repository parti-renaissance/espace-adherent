{% macro label(label, bgColor = '#3C8DBC', textColor = '#FFFFFF', tooltip = null, placement = 'top') %}
    <span class="label badge"
          style="background-color: {{ bgColor }}; color: {{ textColor }};"
        {% if tooltip and tooltip is not empty %}
            data-tippy-content="{{ tooltip|trim|e('html_attr') }}"
            data-tippy-placement="{{ placement }}"
        {% endif %}
    >
        {{ label }}
    </span>
{% endmacro %}
