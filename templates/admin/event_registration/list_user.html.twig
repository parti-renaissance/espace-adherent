{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% set adherent = object.adherent %}

    {% if adherent %}
        {{ include(('admin/adherent/display_fullname_certified.html.twig'), {object: adherent}) }}
    {% else %}
        {{ object.fullName }}
        <br />
        {{ object.emailAddress }}
    {% endif %}
{% endblock %}
