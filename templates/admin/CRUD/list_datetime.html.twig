{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {%- if value is empty -%}
        &nbsp;
    {%- else -%}
        {% set format = field_description.options.pattern|default('') %}
        {% set timezone = field_description.options.timezone|default('Europe/Paris') %}

        {{ value|format_datetime('medium', 'short', format, timezone) }}
    {%- endif -%}
{% endblock %}
