{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% if object.isOfJemarcheDataSurvey %}
        {{ object.jemarcheDataSurvey.firstName }} {{ object.jemarcheDataSurvey.lastName }}
        <br />
        {{ object.jemarcheDataSurvey.emailAddress }}
    {% elseif object.isOfPhoningCampaignHistory and object.phoningCampaignHistory.adherent %}
        <a href="{{ path('admin_app_adherent_show', { id: object.phoningCampaignHistory.adherent.id }) }}">
            {{ object.phoningCampaignHistory.adherent.fullName }}
        </a>
        <br />
        {{ object.phoningCampaignHistory.adherent.emailAddress }}
    {% elseif object.isOfPapCampaignHistory %}
        {{ object.papCampaignHistory.firstName }} {{ object.papCampaignHistory.lastName }}
        <br />
        {{ object.papCampaignHistory.emailAddress }}
    {% endif %}
{% endblock %}
