{% if object is instanceof('App\\Entity\\NationalEvent\\Payment') or object is instanceof('App\\Entity\\NationalEvent\\TicketScan') %}
    {% set object = object.inscription %}
{% endif %}

{% set adherent = object.adherent %}

{% if adherent %}
    {{ include('admin/adherent/display_fullname_certified.html.twig') }}
{% else %}
    <div style="white-space: nowrap;">
        <p style="font-weight: bold;">{{ object.gender ? object.gender|civility_alias }} {{ object.firstName }} {{ object.lastName }}</p>
        <p>{{ object.addressEmail }}</p>
    </div>
{% endif %}
