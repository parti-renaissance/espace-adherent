{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block logo %}
    <a class="logo" href="{{ path('sonata_admin_dashboard') }}">
        <img src="{{ asset('images/renaissance/logo.svg') }}" alt="logo"/>
    </a>
{% endblock %}

{% block meta_tags %}
    {{ parent() }}

    <link rel="icon" type="image/png" href="{{ asset('favicon-re.png') }}?v2" sizes="32x32" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/simplemde.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ webpack_asset('admin.css') }}" />
    <style>
        .avatar {
            width: 60px;
            height: 60px;
            background-size: cover;
            background-position: top center;
            border-radius: 50%;
            flex-shrink: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            background-color: rgb(236, 236, 236);
            color: rgb(99, 115, 129);
            font-weight: bold;
        }
        .visually-hidden {
            display: none;
        }
        .text--center {
            text-align: center;
        }
        .editor-toolbar.fullscreen, .CodeMirror-fullscreen {
            z-index: 1100 !important;
        }
        .category-skills-bloc .sonata-collection-row .row .btn-link.sonata-collection-delete {
            float: right;
        }
        .category-skills-bloc .sonata-collection-row .row .sonata-ba-field .form-group {
            display: inline-block;
        }
        .category-skills-bloc .sonata-collection-row .row .sonata-ba-field .form-group .select2-container {
            width: 100%;
        }
        .category-skills-bloc .sonata-collection-row .row .sonata-ba-field [id$="_skill"].form-group {
            width: 50%;
        }
        .category-skills-bloc .sonata-collection-row .row .sonata-ba-field [id$="_promotion"].form-group {
            width: 20%;
            margin-left: 30px;
        }
        .a2lix_translations .nav-tabs > li.error > a {
            background-color: #dd4b39 !important;
            color: #fff !important;
        }
        .text--bold {
            font-weight: 700;
        }
        .inline-block {
            display: inline-block;
            width: 100%;
        }
        .left {
            float: left;
        }
        .rigth {
            float: right;
        }
        .width-50 {
            max-width: 50px;
        }
        .width-125 {
            max-width: 125px;
        }
        .width-135 {
            max-width: 135px;
        }
        .width-140 {
            max-width: 140px;
        }
        .phone .select2-container {
            width: 25% !important;
            float: left;
        }
        .phone input {
            width: 75%;
        }
        .elected-representative-label {
            width: fit-content;
            border-radius: .25em;
            border: 1px solid #ccc;
            padding: 3px 12px;
            margin: 3px 5px 3px 0;
            position: relative;
            line-height: 14px;
            font-weight: 700;
            color: #fff;
            cursor: default;
        }
        .elected-representative-link {
            border: 1px solid #00a65a;
            text-align: center;
            color: #00a65a;
            display: block;
        }
        .row-no-gutters > div {
            padding: 0;
        }
        .sonata-ba-field-inline-table table tbody.sonata-ba-tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }
        .main-header .logo {
            background-color: #222d32 !important;
            border-right: 0 none !important;
        }

        .main-header .logo img {
            max-width: inherit;
        }
        .tiptap-menu button {
            background: none;
        }
        .tiptap-menu button img {
            width: 20px;
            height: 20px;
        }
        .tiptap-menu {
            padding: 16px;
            border-bottom: 1px solid #ccc;
        }
        .tiptap-container {
            border: 1px solid #ccc;
        }
        .tiptap {
            padding: 16px;
        }
        .lucide {
            width: 14px;
            height: 14px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ webpack_asset('admin.js') }}"></script>
    <script src="{{ asset('js/simplemde.min.js') }}"></script>
    <script>
     $(function() {
         $('.content-editor').each(function(key, item) {
             var simplemde = new SimpleMDE({
                 element: item,
                 spellChecker: false,
                 renderingConfig: {
                     singleLineBreaks: false
                 },
                 previewConfig: {
                     useIframe: true,
                     editorCss: [
                         '{{ webpack_asset('kernel.css') }}',
                         '{{ asset('css/simplemde.inside.css') }}'
                     ],
                 },
                 toolbar: [
                     {
                         name: "fullscreen",
                         action: function() {
                             simplemde.toggleSideBySide();
                             simplemde.toggleFullScreen();
                         },
                         className: "fa fa-eye",
                         title: "Plein écran avec prévisualisation"
                     },
                     "|",
                     {
                         name: "bold",
                         action: SimpleMDE.toggleBold,
                         className: "fa fa-bold",
                         title: "Gras"
                     },
                     {
                         name: "italic",
                         action: SimpleMDE.toggleItalic,
                         className: "fa fa-italic",
                         title: "Italique"
                     },
                     {
                         name: "title",
                         action: SimpleMDE.toggleHeading3,
                         className: "fa fa-header",
                         title: "Titre"
                     },
                     "|",
                     {
                         name: "unordered-list",
                         action: SimpleMDE.toggleUnorderedList,
                         className: "fa fa-list-ul",
                         title: "Liste à puces"
                     },
                     {
                         name: "ordered-list",
                         action: SimpleMDE.toggleUnorderedList,
                         className: "fa fa-list-ol",
                         title: "Liste à chiffres"
                     },
                     "|",
                     {
                         name: "link",
                         action: SimpleMDE.drawLink,
                         className: "fa fa-link",
                         title: "Lien"
                     },
                     {
                         name: "image",
                         action: function(editor) {
                             editor.codemirror.replaceSelection(
                                 "<figure>\n" +
                                 "    <img src=\"http://url-de-l-image.com\">\n" +
                                 "    <figcaption>Légende de l'image</figcaption>\n" +
                                 "</figure>"
                             );

                             editor.codemirror.focus();
                         },
                         className: "fa fa-image",
                         title: "Image avec légende"
                     },
                     {
                         name: "video",
                         action: function(editor) {
                             editor.codemirror.replaceSelection(
                                 "<div class=\"video\">\n"+
                                 "    <iframe src=\"https://url-de-la-video.com\" width=\"560\" height=\"315\"\n" +
                                 "            frameborder=\"0\" style=\"border:none;overflow:hidden\" scrolling=\"no\" frameborder=\"0\" allowTransparency=\"true\" allowFullScreen=\"true\"></iframe>\n"+
                                 "</div>"
                             );

                             editor.codemirror.focus();
                         },
                         className: "fa fa-film",
                         title: "Vidéo YouTube/Facebook"
                     },
                     {
                         name: "quote",
                         action: function(editor) {
                             editor.codemirror.replaceSelection(
                                 "<figure>\n" +
                                 "    <blockquote>\n" +
                                 "        <span>« Citation »</span>\n" +
                                 "    </blockquote>\n" +
                                 "    <figcaption>Emmanuel Macron, le 20 janvier 2017</figcaption>\n" +
                                 "</figure>"
                             );

                             editor.codemirror.focus();
                         },
                         className: "fa fa-quote-left",
                         title: "Citation"
                     },
                     {
                         name: "horizontal-rule",
                         action: SimpleMDE.drawHorizontalRule,
                         className: "fa fa-minus",
                         title: "Barre de séparation horizontale"
                     },
                     "|",
                     {
                         name: "guide",
                         action: "https://github.com/EnMarche/en-marche.fr/blob/master/docs/content-styleguide.md",
                         className: "fa fa-question-circle",
                         title: "Mardown Guide"
                     },
                     "|",
                     "side-by-side"
                 ],
             });
         });
         $('.markdown-content-editor').each(function(key, item) {
             var simplemde = new SimpleMDE({
                 element: item,
                 spellChecker: false,
                 renderingConfig: {
                     singleLineBreaks: false
                 },
                 previewConfig: {
                     useIframe: true,
                     editorCss: [
                         '{{ webpack_asset('kernel.css') }}',
                         '{{ asset('css/simplemde.inside.css') }}'
                     ],
                 },
                 toolbar: [
                     {
                         name: "fullscreen",
                         action: function() {
                             simplemde.toggleSideBySide();
                             simplemde.toggleFullScreen();
                         },
                         className: "fa fa-eye",
                         title: "Plein écran avec prévisualisation"
                     },
                     "|",
                     {
                         name: "bold",
                         action: SimpleMDE.toggleBold,
                         className: "fa fa-bold",
                         title: "Gras"
                     },
                     {
                         name: "italic",
                         action: SimpleMDE.toggleItalic,
                         className: "fa fa-italic",
                         title: "Italique"
                     },
                     {
                         name: "heading-1",
                         action: SimpleMDE.toggleHeading1,
                         className: "fa fa-header fa-header-x fa-header-1",
                         title: "Titre 1"
                     },
                     {
                         name: "heading-2",
                         action: SimpleMDE.toggleHeading2,
                         className: "fa fa-header fa-header-x fa-header-2",
                         title: "Titre 2"
                     },
                     {
                         name: "heading-3",
                         action: SimpleMDE.toggleHeading3,
                         className: "fa fa-header fa-header-x fa-header-3",
                         title: "Titre 3"
                     },
                     "|",
                     {
                         name: "link",
                         action: function(editor) {
                             editor.codemirror.replaceSelection("[](https://)");
                             editor.codemirror.focus();
                         },
                         className: "fa fa-link",
                         title: "URL"
                     },
                     {
                         name: "image",
                         action: function(editor) {
                             editor.codemirror.replaceSelection("![](https://)");
                             editor.codemirror.focus();
                         },
                         className: "fa fa-picture-o",
                         title: "Image"
                     },
                     "|",
                     {
                         name: "unordered-list",
                         action: SimpleMDE.toggleUnorderedList,
                         className: "fa fa-list-ul",
                         title: "Liste à puces"
                     },
                     {
                         name: "ordered-list",
                         action: SimpleMDE.toggleOrderedList,
                         className: "fa fa-list-ol",
                         title: "Liste à chiffres"
                     },
                     "|",
                     {
                         name: "horizontal-rule",
                         action: SimpleMDE.drawHorizontalRule,
                         className: "fa fa-minus",
                         title: "Barre de séparation horizontale"
                     },
                     "|",
                     "side-by-side"
                 ],
             });
         });
     });
    </script>
{% endblock %}

{% block sonata_sidebar_search '' %}

{% block side_bar_before_nav %}
    <ul class="sidebar-menu">
        <li>
            <a href="{{ path('sonata_admin_dashboard') }}">
                <i class="fa fa-home"></i>
                <span>Tableau de bord</span>
            </a>
        </li>
    </ul>
{% endblock %}

{% block side_bar_after_nav %}
    <ul class="sidebar-menu">
        <li>
            <a href="{{ path('renaissance_site') }}">
                <i class="fa fa-reply"></i>
                <span>Retour au site</span>
            </a>
        </li>
        <li>
            <a href="{{ path('logout', {app_domain: admin_renaissance_host}) }}">
                <i class="fa fa-sign-out"></i>
                <span>Déconnexion</span>
            </a>
        </li>
    </ul>
{% endblock %}

{% block sonata_page_content_header %}
    {{ parent() }}

    {% if action is defined and action == 'list' and admin is instanceof('App\\Admin\\ZoneableAdminInterface') and not app.user.zones.isEmpty() %}
        <div class="callout callout-info" style="margin: 10px 0 0 0;background-color: #ccc !important; color: #000 !important; padding: 10px; border-radius: 3px;">
            <p>Les résultats affichés correspondent uniquement au périmètre géographique que vous gérez : {{ app.user.zones|join(', ') }}</p>
        </div>
    {% endif %}
{% endblock %}
