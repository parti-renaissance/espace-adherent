{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% set visibility = object.visibility %}

    <span class="label label-{{ constant('App\\Scope\\ScopeVisibilityEnum::LOCAL') == visibility ? 'primary' : 'success' }}">
        {{ ('scope.visibility.' ~ visibility)|trans }}
    </span>
{% endblock %}
