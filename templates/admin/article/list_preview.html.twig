{% if object.isForRenaissance %}
    <a href="{{ path('article_preview', {categorySlug: object.category.slug, articleSlug: object.slug, app_domain: renaissance_host, bypass: renaissance_article_preview_key}) }}" class="btn btn-sm btn-default view_link"
       title="Prévisualiser" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-search-plus" aria-hidden="true"></i>
        Prévisualiser
    </a>
{% else %}
    <a href="{{ path('article_preview', {categorySlug: object.category.slug, articleSlug: object.slug}) }}" class="btn btn-sm btn-default view_link"
       title="Prévisualiser" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-search-plus" aria-hidden="true"></i>
        Prévisualiser
    </a>
{% endif %}
