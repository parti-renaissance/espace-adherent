{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    <div style="width: 160px; margin-top: 5px;">
        <a href="{{ path('admin_app_event_event_edit', {id: object.id}) }}" class="btn btn-xs btn-default" title="Éditer">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Éditer
        </a>
    </div>

    {% if object.isPublished %}
        <div style="width: 160px; margin-top: 5px;">
            <a href="{{ path('vox_app') }}evenements/{{ object.slug }}"
               class="btn btn-xs btn-default" title="Voir sur le site" target="_blank">
                <i class="fa fa-eye" aria-hidden="true"></i>
                Voir sur le site
            </a>
        </div>
    {% endif %}

    <div style="width: 160px; margin-top: 5px;">
        <a href="{{ path('admin_app_event_eventregistration_list', {filter: {event: {value: [object.id]}}}) }}"
           class="btn btn-xs btn-default" title="Voir sur le site" target="_blank">
            <i class="fa fa-users" aria-hidden="true"></i>
            Participants
        </a>
    </div>
{% endblock %}
