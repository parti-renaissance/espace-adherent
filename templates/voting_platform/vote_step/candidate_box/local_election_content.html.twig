{% import 'voting_platform/_macros.html.twig' as helper %}

<div x-data="{ open: false }">
    {% if candidate_group %}
        {% set candidates = candidate_group.getCandidatesSorted(true) %}
        {% set first = candidates|first %}
        <ul>
            <li class="text-gray-500">
                {{ first.getFirstName() }}
                <span class="uppercase font-medium"> {{ first.getLastName() }}</span>
                <span class="inline-block">
                    {% if first.isFemale %}
                        <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 2.5c-2.06 0-3.75 1.641-3.75 3.665 0 1.866 1.442 3.388 3.28 3.616v3.973H7.676a.469.469 0 1 0 0 .938H9.53v2.34a.47.47 0 0 0 .938 0v-2.34h1.851a.469.469 0 1 0 0-.938h-1.85V9.781c1.838-.228 3.281-1.749 3.281-3.616C13.75 4.141 12.058 2.5 10 2.5Zm0 .938c1.564 0 2.812 1.223 2.812 2.727 0 1.504-1.248 2.726-2.813 2.726-1.565 0-2.81-1.222-2.81-2.726s1.245-2.727 2.81-2.727Z"/>
                        </svg>
                    {% else %}
                        <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M13.9 3.125a.48.48 0 0 0-.13.018L9.117 4.419a.484.484 0 0 0-.296.232.504.504 0 0 0 .179.68.482.482 0 0 0 .37.05l3.515-.966-3.178 5.61c-1.773-.765-3.862-.131-4.833 1.583-1.053 1.86-.383 4.26 1.47 5.35 1.852 1.091 4.228.485 5.28-1.375.97-1.713.462-3.875-1.073-5.059l3.179-5.612.936 3.585a.5.5 0 0 0 .227.302.481.481 0 0 0 .666-.182.505.505 0 0 0 .05-.377l-1.242-4.746a.498.498 0 0 0-.172-.265.481.481 0 0 0-.295-.104Zm-5.897 7.56c.582-.033 1.16.11 1.663.408 1.408.83 1.895 2.612 1.113 3.993-.782 1.382-2.539 1.842-3.948 1.012-1.408-.829-1.895-2.612-1.113-3.993.235-.412.567-.758.966-1.006s.852-.39 1.32-.414Z"/>
                        </svg>
                    {% endif %}
                </span>
            </li>
            <li class="text-gray-500">+ {{ candidates|length - 1 }} candidature{{ candidates|length - 1 > 1 ? 's' }}</li>
        </ul>

        <div class="flex items-center justify-between text-base !text-gray-500">
            <a href="#" class="inline-flex items-center !hover:text-re-blue-400">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9.75v6.75m0 0l-3-3m3 3l3-3m-8.25 6a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z" />
                </svg>
                Profession de foi
            </a>
            <button @click="open =! open" type="button" class="inline-flex items-center hover:text-re-blue-400 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Liste complète
            </button>
        </div>

        <!-- Modal Liste des candidats -->
        <div @keydown.window.escape="open = false" x-show="open" class="relative z-10" aria-labelledby="modal-title" x-ref="dialog" aria-modal="true">
            <div x-show="open" x-cloak
                 x-transition:enter="ease-out duration-300"
                 x-transition:enter-start="opacity-0"
                 x-transition:enter-end="opacity-100"
                 x-transition:leave="ease-in duration-200"
                 x-transition:leave-start="opacity-100"
                 x-transition:leave-end="opacity-0"
                 class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity backdrop-blur-sm"></div>

            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center md:items-center md:p-0">

                    <div x-show="open"
                         x-transition:enter="ease-out duration-300"
                         x-transition:enter-start="opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
                         x-transition:enter-end="opacity-100 translate-y-0 md:scale-100"
                         x-transition:leave="ease-in duration-200"
                         x-transition:leave-start="opacity-100 translate-y-0 md:scale-100"
                         x-transition:leave-end="opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
                         class="relative transform overflow-hidden rounded-lg bg-white px-4 pt-5 pb-4 text-left shadow-xl transition-all md:my-8 md:w-full md:max-w-lg md:p-6"
                         @click.away="open = false"
                         x-cloak
                    >
                        <div class="absolute top-0 right-0 hidden pt-4 pr-4 md:block">
                            <button type="button" class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" @click="open = false">
                                <span class="sr-only">Fermer</span>
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                        </div>
                        <div>
                            <div class="flex items-center space-x-3">
                                <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-re-blue-100 md:mx-0 md:h-10 md:w-10">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-re-blue-600">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                                    </svg>
                                </div>
                                <h3 class="!my-0 !text-lg font-medium !leading-6 !text-gray-900">Membres de la liste</h3>
                            </div>
                            <div class="mt-2">
                                <ul class="!my-0">
                                    {% for candidacy in candidates %}
                                        <li class="!px-4 !py-1.5">
                                            <span class="text-gray-400">{{ candidacy.gender == 'male' ? 'M' : 'Mme' }}</span>
                                            <span class="inline-block ml-0.5 text-gray-700 font-medium">
                                                {{ candidacy.getFirstName() }} <span class="uppercase">{{ candidacy.getLastName() }}</span>
                                            </span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="mt-5 md:mt-4 md:flex md:flex-row-reverse">
                            <a href="#" class="inline-flex w-full justify-center rounded-md border border-transparent bg-re-blue-600 px-4 py-2 text-base font-medium !text-white shadow-sm hover:bg-re-blue-700 focus:outline-none focus:ring-2 focus:ring-re-blue-500 focus:ring-offset-2 md:ml-3 md:w-auto md:text-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1.5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9.75v6.75m0 0l-3-3m3 3l3-3m-8.25 6a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z" />
                                </svg>
                                Télécharger la Profession de foi
                            </a>
                            <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-base font-medium text-gray-700 shadow-sm hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 md:mt-0 md:w-auto md:text-sm" @click="open = false">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
            <h3 class="!my-0 text-lg !font-medium">Bulletin blanc</h3>
        </div>
        <p class="!my-0 text-base text-gray-500 leading-5">Aucune liste sélectionnée</p>
    {% endif %}
</div>
