{% extends 'voting_platform/_layout_base.html.twig' %}

{% set start_button_label = 'J\'accède au vote' %}

{% block vote_step_pool_title %}
    Étape {{ pool_index + 1 }} : {{ pool.code }}
{% endblock %}

{% block banner %}
    <div class="max-w-8xl mx-auto py-3 px-4 md:px-6">
        <a href="{{ path('app_renaissance_local_election_home') }}" class="text-base text-gray-500 hover:text-gray-900">
            ← Retourner
        </a>
    </div>
{% endblock %}

{% block voting_platform_subtitle %}
    {{ designation.getZones()|join(', ') }}
{% endblock %}

{% block election_sub_title %}
    <p class="text-gray-500">
        Le vote est ouvert du {{ election.voteStartDate|date('d/m/Y \à H:i') }} au {{ election.voteEndDate|date('d/m/Y \à H:i') }}
    </p>
{% endblock %}

{% block vote_finish_action_block %}
    <div class="b__nudge--bottom-large b__nudge--top-large">
        <a href="{{ path('app_renaissance_local_election_home') }}" class="btn btn--blue">
            Retour à l’accueil
        </a>
    </div>
{% endblock %}

