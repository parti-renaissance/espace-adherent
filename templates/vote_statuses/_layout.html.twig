{% extends 'base.html.twig' %}

{% block page_title 'Vote des statuts' %}

{% block content %}
    <main class="instance-page instance--vote-statuses">
        <header class="instance-page__header">
            <div class="l__wrapper instance-page__header__content">
                <div class="text--white instance-page__header__titles">
                    <div class="instance-page__name">
                        <h1 class="text--large">{{ cms_block('vote-statuses-landing-page-title') }}</h1>
                    </div>
                    <ul class="instance-page__infos">
                        <li>
                            {{ include('components/location.html.twig') }}
                            France
                        </li>
                    </ul>
                </div>
            </div>
        </header>

        <div class="l__wrapper l__row l__row--top l__row--h-stretch l__tablet--col">
            <div class="instance-page__main l__wrapper--main l__wrapper--main-left">
                {% set designation = find_active_poll_designation() %}

                {% if designation and designation.isActive() %}
                    {% include 'vote_statuses/_election_box.html.twig' %}
                {% endif %}

                {{ include('vote_statuses/_nav.html.twig') }}

                {% block sub_content %}{% endblock %}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runCountdownClock('.em-countdown-clock', true);
        });
    </script>
{% endblock %}
