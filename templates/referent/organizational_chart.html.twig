{% extends 'referent/_layout.html.twig' %}

{% import 'referent/organizational_chart_macros.html.twig' as oc %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block referent_content %}
    <h3>Votre équipe départementale</h3>
    <div>
        Remplissez l'organigramme de votre équipe départementale, afin de faciliter
        les échanges et la coordination avec les équipes du QG.
    </div>
    <hr>
    {% set showForm = referent.referentPersonLinks.count and form.referentPersonLinks is defined %}
    {% if showForm %}
        {{ form_start(form) }}
    {% endif %}
    {{ oc.orga_chart_row(organization_chart_items, referent, true, false, form) }}
    {% if showForm %}
        {{ form_widget(form.save, {label: 'referent.save', attr: {class: 'btn btn-primary'}}) }}
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
