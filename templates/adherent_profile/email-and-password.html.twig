{% extends 'adherent_profile/_layout.html.twig' %}

{% block adherent_profile_content %}
    <section class="adherent-profile__section">
        <h1 class="text--medium-large">E-mail et mot de passe</h1>

        <form class="em-form">
            <div class="em-form__section">
                <h2 class="section-subtitle">Votre adresse e-mail</h2>
                <div class="em-form__group half">
                    <label for="" class="em-form__label">
                        Adresse e-mail <span class="em-form__required">*</span>
                    </label>
                    <input type="text" class="em-form__field">
                </div>
            </div>

            <div class="em-form__section">
                <h2 class="section-subtitle">Votre mot de passe</h2>
                <div class="em-form__group half">
                    <label for="" class="em-form__label">
                        Ancien mot de passe <span class="em-form__required">*</span>
                    </label>
                    <input type="text" class="em-form__field">
                </div>
                <div class="em-form__group half">
                    <label for="" class="em-form__label">
                        Nouveau mot de passe <span class="em-form__required">*</span>
                    </label>
                    <input type="text" class="em-form__field">
                </div>
                <div class="em-form__group half">
                    <label for="" class="em-form__label">
                        Confirmez nouveau mot de passe <span class="em-form__required">*</span>
                    </label>
                    <input type="text" class="em-form__field">
                </div>
            </div>

            <button class="btn btn--blue">Enregistrer</button>
        </form>
    </section>
{% endblock %}
