{% extends 'board_member/layout.html.twig' %}

{% set currentRoute = app.request.attributes.get('_route') %}

{% block page_title 'Recherche membres du Conseil' %}

{% block content__inner %}
    <section class="background--blue-light">
        <div class="l__wrapper space--30-0 spaces__search">
            {% include 'board_member/_search_form.html.twig' %}
        </div>
        <div class="l__wrapper space--30-0 spaces__search--mobile text--center">
            <h3>
                Élargissez votre écran pour accéder aux filtres de recherche.
            </h3>
        </div>
    </section>
    <section class="l__wrapper space--60-0 spaces__search__results">
        {% if results.count > 0  %}
            <div class="l__row l__row--h-stretch l__mobile--col">
                <h2>Tous les résultats ({{ results.count }})</h2>

                <a href="{{ path('app_board_member_message_search') ~ filter }}" class="newbtn newbtn--light">
                    {{ 'board_member.message.send_to_members'|trans({ count: results.count }) }}
                </a>
            </div>

            {% include('board_member/_list_board_members.html.twig') %}

            <div class="text--center">
                {% include 'board_member/_search_pager.html.twig' %}
            </div>
        {% else %}
            <h2>Aucun resultat pour ces critères de recherche</h2>
        {% endif %}
    </section>
{% endblock %}
