<ul class="text--body l__row l__row--h-stretch b__nudge--bottom">
    <li class="text--orange text--bold text--center text--medium-small b__nudge--right">
        {{ action.beginAt|date('d') }}
        <br/>
        {{ action.beginAt|localizeddate('full', 'none', format="MMM")|capitalize }}
    </li>

    <li class="b__flex--1">
        <a href="{{ path('app_citizen_action_event_show', {slug: action.slug}) }}"
           class="{{ action.beginAt|date('U') < 'now'|date('U') ? 'text--gray ' : '' }}text--bold text--medium-small link--no-decor">{{ action.name }}</a>
        <div class="text--small text--gray">{{ action.participantsCount }} inscrit(s)</div>
    </li>

    <li>
        {% if date(action.beginAt) > date() %}
            <a class="newbtn--small btn--blue"
               href="{{ path('app_citizen_action_event_attend', {slug: action.slug}) }}">
                S'inscrire
            </a>
        {% endif %}
    </li>
</ul>
