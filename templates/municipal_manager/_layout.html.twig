{% extends 'base.html.twig' %}

{% block page_title 'Mon espace Responsable communal' %}

{% block banner '' %}

{% block content %}
    <main>
        <section class="manager-space b__nudge--bottom-huge">
            <header class="manager-header">
                <div class="l__wrapper">
                    <div class="first-section">
                        <div class="el manager-information">
                            <p>Vous g√©rez : <span>{{ app.user.municipalManagerRole.cities|join(', ') }}</span></p>
                        </div>
                        <div class="el">
                            <p class="report">üêõ Bug ? Nouveau besoin ?
                                <a href="mailto:cellule.technique.municipales&#64;en-marche.fr" class="text--blue--dark link--no-decor">√âcrivez-nous !</a>
                            </p>
                        </div>
                    </div>
                    <div class="second-section">
                        <h1 class="page-title text--large b__nudge--bottom">
                            {{ block('page_title') }}
                        </h1>
                    </div>
                    <nav class="manager-header__menu">
                        <ul>
                            {% if enable_assessor_space %}
                                <li class="{{ is_active_route(app.request, ['app_assessors_municipal_manager_*', 'app_municipal_manager_vote_result_list_edit', 'app_vote_results_municipal_manager_index', 'app_municipal_manager_cities_list', 'app_municipal_manager_city_vote_results_edit']) ? 'active' }}">
                                    <a href="{{ path('app_assessors_municipal_manager_attribution_form') }}">Assesseurs</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </header>

            <div class="l__wrapper text--body">
                <div class="datagrid__table__tabs">
                    <div class="datagrid__table__tabs__items">
                        {% if enable_assessor_space %}
                            <h3>
                                <a href="{{ path('app_assessors_municipal_manager_attribution_form') }}">Bureaux de vote</a>
                            </h3>

                            <span class="separator"></span>
                        {% endif %}

                        <h3>
                            <a href="{{ path('app_municipal_manager_cities_list') }}">Communes</a>
                        </h3>
                    </div>
                </div>

                {% block municipal_manager_content %}{% endblock %}
            </div>
        </section>
    </main>
{% endblock %}
