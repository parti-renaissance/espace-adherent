{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title 'Les propositions d\'Emmanuel Macron' %}
{% block canonical_url url('program_index') %}
{% block meta_description page.description %}
{% block meta_twitter_description page.twitterDescription ?: page.description %}

{% block open_graph_image (homepage_url ~ static_asset('programme.jpg', {'w': 1600, 'h': 800}))|raw %}

{% block content %}
<main class="content">
    <section class="programme">
        <nav class="text--body">
            <ul class="l__wrapper">
                <li class="active">
                    <a href="{{ path('program_index') }}">
                        Le programme
                    </a>
                </li>
                <li>
                    <a href="{{ path('article_view', {categorySlug: 'actualites', articleSlug: 'contrat-avec-la-nation'}) }}">
                        Le contrat avec la Nation
                    </a>
                </li>
                <li>
                    <a href="{{ path('article_view', {categorySlug: 'actualites', articleSlug: 'emmanuel-macron-notre-projet-economique-efficace-juste-et-credible'}) }}">
                        Stratégie économique
                    </a>
                </li>
                <li>
                    <a href="https://storage.googleapis.com/en-marche-fr/COMMUNICATION/Programme-Emmanuel-Macron.pdf"
                       target="_blank" rel="noopener noreferrer">
                        Télécharger le programme
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_social_share_list') }}">
                        Partagez
                    </a>
                </li>
            </ul>
        </nav>

        <header class="programme__header__outer space--30-0 progressive-background"
                data-sd="{{ static_asset('propositions.jpg', {'w': 300, 'q': 20}) }}"
                data-hd="{{ static_asset('propositions.jpg', {'q': 70}) }}">
            <div class="programme__header__inner l__wrapper--slim">
                <div class="programme__titles">
                    <h1 class="text--large b__nudge--bottom-small">
                        Le programme d’Emmanuel Macron
                    </h1>
                    <a href="https://avecvous.fr/projet-presidentiel?utm_source=em-programme-2017-redirect"
                       class="programme__download icon--with-text text--white btn btn--blue btn--large-and-full"
                       target="_blank">
                        Consulter le projet 2022
                    </a>
                    <br/>
                    <a href="https://storage.googleapis.com/en-marche-fr/COMMUNICATION/Programme-Emmanuel-Macron.pdf"
                       class="programme__download icon--with-text text--white btn btn--grey btn--large-and-full"
                       target="_blank" rel="noopener noreferrer">
                        Télécharger le programme 2017
                    </a>
                    <p class="text--body">
                        {{ page.description }}
                    </p>
                </div>
                <a href="https://storage.googleapis.com/en-marche-fr/COMMUNICATION/Programme-Emmanuel-Macron.pdf"
                   class="programme__cover link--no--decor" target="_blank" rel="noopener noreferrer">
                    <img src="{{ asset('images/couverture-programme.png') }}" />
                </a>
            </div>
        </header>

        <article class="l__wrapper--slim">
            <div class="b__nudge--bottom-larger">
                {{ page.content|markdown }}
            </div>

            <ul class="programme__proposals">
                <li class="programme__proposal programme__proposal--category">
                    <a href="https://storage.googleapis.com/en-marche-fr/COMMUNICATION/Programme-Emmanuel-Macron.pdf"
                       target="_blank" rel="noopener noreferrer">
                        <h2>
                            Le programme d’Emmanuel Macron
                        </h2>
                        <div>Télécharger</div>
                    </a>
                </li>
                <li class="programme__proposal programme__proposal--category">
                    <a href="{{ path('article_view', {categorySlug: 'actualites', articleSlug: 'contrat-avec-la-nation'}) }}" target="_blank">
                        <h2>
                            Le contrat avec la Nation
                        </h2>
                        <div>
                            En savoir plus
                        </div>
                    </a>
                </li>
                <li class="programme__proposal programme__proposal--category">
                    <a href="{{ path('article_view', {categorySlug: 'actualites', articleSlug: 'emmanuel-macron-notre-projet-economique-efficace-juste-et-credible'}) }}" target="_blank">
                        <h2>
                            Stratégie économique
                        </h2>
                        <div>En savoir plus</div>
                    </a>
                </li>

                {% for proposal in proposals if proposal.published %}
                <li class="programme__proposal">
                    <a href="{{ path('program_proposal', {'slug': proposal.slug}) }}">
                        <h2>
                            {% for theme in proposal.themes %}
                                {{ theme.name }}
                            {% endfor %}
                        </h2>
                        <div>En savoir plus</div>
                    </a>
                </li>
                {% endfor %}
            </ul>
        </article>

        <div class="l__wrapper--slim">
            <ul class="reminders">
                <li class="reminder">
                    <h2>J'adhère à La République En Marche</h2>
                    <a href="{{ path('app_membership_join') }}" target="_blank" class="btn btn--no-border">J'adhère</a>
                </li>
                <li class="reminder">
                    <h2>Je m'abonne à la Newsletter</h2>
                    <a href="{{ path('newsletter_subscription') }}" target="_blank" class="btn btn--no-border">Je m'abonne</a>
                </li>
                <li class="reminder">
                    <h2>Ce qui a changé près de chez vous</h2>
                    <a href="https://chezvous.en-marche.fr/" target="_blank" class="btn btn--no-border">J'entre ma ville</a>
                </li>
                <li class="reminder">
                    <h2>On l'a dit, on le fait</h2>
                    <a href="https://transformer.en-marche.fr/" target="_blank" class="btn btn--no-border">Consulter les mesures</a>
                </li>
            </ul>
        </div>

        <section class="donate l__wrapper--slim background--green b__nudge--bottom-huge">
            <div class="space--30 l__row l__row--h-stretch l__mobile--col">
                <div class="donate__text">
                    <h2 class="text--large">
                        Un don pour <span class="text--on-white">transformer</span> la France !
                    </h2>
                    <p class="text--body text--small b__nudge--top-large">
                        Chaque don, quel que soit le montant, nous permet d’engager une action concrète pour réussir ensemble la transformation du pays.
                    </p>
                </div>

                {{ include('donation/_quick_form.html.twig') }}
            </div>
        </section>
    </section>

</main>
{% endblock %}
