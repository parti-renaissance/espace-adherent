{% use "form_div_layout.html.twig" %}

{# Override #}

{% block form_widget_simple -%}
    {% if type is not defined or type not in ['file', 'hidden'] %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' form form__field')|trim}) -%}
    {% endif %}
    {{- parent() -}}
{%- endblock form_widget_simple %}

{% block textarea_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form form__field')|trim}) %}
    {{- parent() -}}
{%- endblock textarea_widget %}

{% block button_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn--primary') ~ ' form btn')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{% block choice_widget_collapsed -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form form__field')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{# Labels #}

{% block form_label -%}
    {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' form form__label')|trim}) -%}
    {{- parent() -}}
{%- endblock form_label %}

{# Errors #}

{% block form_errors -%}
    {% if errors|length > 0 -%}
    <ul class="form form__errors">
        {%- for error in errors -%}
            <li class="form__error">
                {{- error.message -}}
            </li>
        {%- endfor -%}
    </ul>
    {%- endif %}
{%- endblock form_errors %}

{# Custom types #}

{% block _app_adherent_pin_interests_interests_widget %}
    {# TODO to be integrated #}
    {{ form_widget(form) }}
{% endblock %}

{% block _app_membership_choose_nearby_committee_committees_row %}
    <div {{ block('widget_container_attributes') }}>
        {% for name, choice in form %}
            {% set memberships_data = form.parent.vars.committees_views_data[name] %}
            <div>
                <div class="background--light">
                    <h5>{{ choice.vars.label }}</h5>
                    <p>Nous sommes {{ memberships_data['memberships'] }} membres</p>
                    <div><a class="btn btn--green" href="{{ path('app_committee_show', { uuid: choice.vars.value, slug: memberships_data['slug'] }) }}">Découvrir</a></div>
                </div>
                <div>
                  {{ form_label(choice, 'Je veux suivre ce comité') }}
                  {{ form_widget(choice) }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
