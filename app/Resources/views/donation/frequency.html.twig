{% extends 'donation/layout.html.twig' %}
{% form_theme form _self %}

{% block donation_content %}
    <ul class="donation__form-steps">
        <li class="active"><span>Montant</span></li>
        <li>Coordonn√©es</li>
        <li>Paiement</li>
        <li>Confirmation</li>
    </ul>

    <div class="donation__frequency">
        <h2>Je veux soutenir chaque mois En Marche</h2>
        <div class="donation__frequency--amount text--medium b__nudge--bottom b__nudge--top">{{ amount }} / mois</div>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form.frequency) }}

        <div class="b__nudge--top">
            {{ form_widget(form.submit, {attr:{class: 'btn btn--primary'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{%- block _donation_frequency_request_frequency_widget -%}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            {{- form_widget(child) -}}
            {{- form_label(child, null, {label_attr: {class: 'btn btn--frequency'}, translation_domain: choice_translation_domain}) -}}
        {% endfor -%}
    </div>
{%- endblock _donation_frequency_request_frequency_widget -%}
