<section class="tonmacron__content l__wrapper-500 l__mobile--col space--60-0">
    <div>
        <ul class="tonmacron__steps">
            <li>Votre ami(e)</li>
            <li class="active">Vos raisons</li>
            <li>Récapitulatif</li>
        </ul>

        {{ form_start(invitation_form) }}

        <h5 class="tonmacron__title">
            Pour finir, expliquez à votre ami les 2 choses qui vous plaisent chez Emmanuel Macron
        </h5>

        {{ form_errors(invitation_form) }}

        <div class="form__row">
            {% for checkbox in invitation_form.selfReasons %}
                <div class="tonmacron__choice">
                    <div class="form__checkbox">
                        {{ form_widget(checkbox) }}
                        {{ form_label(checkbox) }}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text--center b__nudge--top-large">
            {{ form_widget(invitation_form.fill_reasons, {'attr': {'class': 'btn btn--blue'}}) }}
            <a href="{{ path('app_ton_macron_invite_restart') }}" class="btn">Recommencer</a>
        </div>

        {{ form_end(invitation_form) }}
    </div>
</section>
